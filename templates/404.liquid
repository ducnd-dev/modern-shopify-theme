{% comment %}
  404 Error Page Template
  Page shown when content is not found
{% endcomment %}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-neutral-50 to-neutral-100 dark:from-neutral-900 dark:to-neutral-800">
  <div class="container mx-auto px-4 text-center">
    <div class="max-w-2xl mx-auto">
      <!-- 404 Illustration -->
      <div class="mb-8">
        <div class="relative inline-block">
          <!-- Large 404 Text -->
          <h1 class="text-8xl md:text-9xl lg:text-[12rem] font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-accent-500 leading-none font-display">
            404
          </h1>
          
          <!-- Decorative Elements -->
          <div class="absolute -top-4 -right-4 w-16 h-16 bg-primary-100 dark:bg-primary-900/30 rounded-full animate-bounce"></div>
          <div class="absolute -bottom-2 -left-2 w-12 h-12 bg-accent-100 dark:bg-accent-900/30 rounded-lg rotate-45 animate-pulse"></div>
        </div>
      </div>

      <!-- Error Message -->
      <div class="mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
          {{ 'templates.404.title' | t | default: 'Page Not Found' }}
        </h2>
        <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto leading-relaxed">
          The page you're looking for seems to have wandered off. Don't worry, even the best explorers sometimes take a wrong turn.
        </p>
      </div>

      <!-- Search Form -->
      <div class="mb-12 max-w-md mx-auto">
        <form action="{{ routes.search_url }}" method="get" class="relative">
          <input
            type="search"
            name="q"
            placeholder="{{ 'general.search.placeholder' | t | default: 'Search products...' }}"
            class="w-full px-6 py-4 pr-14 border border-neutral-300 dark:border-neutral-600 rounded-full bg-white dark:bg-neutral-800 text-neutral-900 dark:text-neutral-100 placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
            autocomplete="off"
          >
          <button
            type="submit"
            class="absolute right-2 top-1/2 transform -translate-y-1/2 p-2 bg-primary-600 hover:bg-primary-700 text-white rounded-full transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
            aria-label="{{ 'general.search.title' | t | default: 'Search' }}"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </form>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <a 
          href="{{ routes.root_url }}" 
          class="btn btn-primary px-8 py-3 flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          Go Home
        </a>
        
        <a 
          href="{{ routes.all_products_collection_url }}" 
          class="btn btn-secondary px-8 py-3 flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
          Shop Now
        </a>
      </div>

      <!-- Popular Pages -->
      <div class="border-t border-neutral-200 dark:border-neutral-700 pt-12">
        <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100 mb-6">
          Popular Pages
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a 
            href="{{ routes.all_products_collection_url }}" 
            class="p-4 rounded-lg border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 bg-white dark:bg-neutral-800 hover:shadow-md transition-all duration-300 group"
          >
            <div class="text-2xl mb-2 group-hover:scale-110 transition-transform duration-300">üõçÔ∏è</div>
            <div class="font-medium text-neutral-900 dark:text-neutral-100">All Products</div>
          </a>
          
          <a 
            href="/pages/about" 
            class="p-4 rounded-lg border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 bg-white dark:bg-neutral-800 hover:shadow-md transition-all duration-300 group"
          >
            <div class="text-2xl mb-2 group-hover:scale-110 transition-transform duration-300">‚ÑπÔ∏è</div>
            <div class="font-medium text-neutral-900 dark:text-neutral-100">About Us</div>
          </a>
          
          <a 
            href="/pages/contact" 
            class="p-4 rounded-lg border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 bg-white dark:bg-neutral-800 hover:shadow-md transition-all duration-300 group"
          >
            <div class="text-2xl mb-2 group-hover:scale-110 transition-transform duration-300">üìû</div>
            <div class="font-medium text-neutral-900 dark:text-neutral-100">Contact</div>
          </a>
          
          <a 
            href="/pages/faq" 
            class="p-4 rounded-lg border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 bg-white dark:bg-neutral-800 hover:shadow-md transition-all duration-300 group"
          >
            <div class="text-2xl mb-2 group-hover:scale-110 transition-transform duration-300">‚ùì</div>
            <div class="font-medium text-neutral-900 dark:text-neutral-100">FAQ</div>
          </a>
        </div>
      </div>

      <!-- Help Section -->
      <div class="mt-12 p-6 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
        <h4 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 mb-4">
          Need Help?
        </h4>
        <p class="text-neutral-600 dark:text-neutral-400 mb-4">
          If you believe this is an error or need assistance, please don't hesitate to contact our support team.
        </p>
        <a 
          href="/pages/contact" 
          class="inline-flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium transition-colors duration-300"
        >
          Contact Support
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes bounce-subtle {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-bounce {
    animation: bounce-subtle 3s ease-in-out infinite;
  }
</style>