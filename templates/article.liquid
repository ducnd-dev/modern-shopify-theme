          <div class="bg-gradient-to-br from-primary-50 to-primary-100 dark:from-primary-900/20 dark:to-primary-800/20 rounded-xl border border-primary-200 dark:border-primary-800 p-6">
            <h3 class="text-lg font-semibold text-primary-900 dark:text-primary-100 mb-3">
              {{ 'blogs.article.newsletter_title' | t | default: 'Stay Updated' }}
            </h3>
            <p class="text-primary-700 dark:text-primary-300 text-sm mb-4">
              {{ 'blogs.article.newsletter_description' | t | default: 'Get the latest articles delivered to your inbox.' }}
            </p>
            {% render 'newsletter-form', context: 'article-sidebar' %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
      // Show success message
      const button = event.target.closest('button');
      const originalText = button.innerHTML;
      button.innerHTML = `
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        Copied!
      `;
      button.classList.remove('bg-neutral-600', 'hover:bg-neutral-700');
      button.classList.add('bg-green-600', 'hover:bg-green-700');
      
      setTimeout(() => {
        button.innerHTML = originalText;
        button.classList.remove('bg-green-600', 'hover:bg-green-700');
        button.classList.add('bg-neutral-600', 'hover:bg-neutral-700');
      }, 2000);
    });
  }
</script>

