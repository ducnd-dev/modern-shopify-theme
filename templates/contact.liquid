{% comment %}
  Contact Template
  Dedicated contact page with contact form, information, and map
{% endcomment %}

<div class="contact-template min-h-screen bg-neutral-50 dark:bg-neutral-900">
  <!-- Contact Header -->
  <div class="bg-white dark:bg-neutral-800 border-b border-neutral-200 dark:border-neutral-700">
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-neutral-100 mb-6">
          {{ page.title | default: 'Contact Us' }}
        </h1>
        {% if page.content != blank %}
          <div class="text-xl text-neutral-600 dark:text-neutral-400 mb-8 prose prose-lg dark:prose-invert mx-auto">
            {{ page.content }}
          </div>
        {% else %}
          <p class="text-xl text-neutral-600 dark:text-neutral-400 mb-8">
            {{ 'contact.form.description' | t | default: 'We\'d love to hear from you. Send us a message and we\'ll respond as soon as possible.' }}
          </p>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-8">
          <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100 mb-6">
            {{ 'contact.form.title' | t | default: 'Send us a Message' }}
          </h2>

          {% form 'contact', class: 'contact-form' %}
            {% if form.posted_successfully? %}
              <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-6 mb-8">
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-green-600 dark:text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <div>
                    <h3 class="text-green-800 dark:text-green-200 font-medium">
                      {{ 'contact.form.post_success_title' | t | default: 'Thank you!' }}
                    </h3>
                    <p class="text-green-700 dark:text-green-300">
                      {{ 'contact.form.post_success' | t | default: 'Your message has been sent successfully. We\'ll get back to you soon.' }}
                    </p>
                  </div>
                </div>
              </div>
            {% endif %}

            {% if form.errors %}
              <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6 mb-8">
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-red-600 dark:text-red-400 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                  </svg>
                  <div>
                    <h3 class="text-red-800 dark:text-red-200 font-medium mb-2">
                      {{ 'contact.form.error_heading' | t | default: 'Please correct the following:' }}
                    </h3>
                    <ul class="text-red-700 dark:text-red-300 space-y-1">
                      {% for field in form.errors %}
                        <li>{{ form.errors.messages[field] }}</li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
            {% endif %}

            <!-- Name Fields -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="ContactFormFirstName" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">
                  {{ 'contact.form.first_name' | t | default: 'First Name' }} *
                </label>
                <input
                  type="text"
                  id="ContactFormFirstName"
                  name="contact[first_name]"
                  class="w-full px-4 py-3 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-500 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                  value="{{ form.first_name }}"
                  placeholder="{{ 'contact.form.first_name' | t | default: 'First Name' }}"
                  autocomplete="given-name"
                  required
                >
              </div>
              <div>
                <label for="ContactFormLastName" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">
                  {{ 'contact.form.last_name' | t | default: 'Last Name' }} *
                </label>
                <input
                  type="text"
                  id="ContactFormLastName"
                  name="contact[last_name]"
                  class="w-full px-4 py-3 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-500 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                  value="{{ form.last_name }}"
                  placeholder="{{ 'contact.form.last_name' | t | default: 'Last Name' }}"
                  autocomplete="family-name"
                  required
                >
              </div>
            </div>

            <!-- Email and Phone -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="ContactFormEmail" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">
                  {{ 'contact.form.email' | t | default: 'Email Address' }} *
                </label>
                <input
                  type="email"
                  id="ContactFormEmail"
                  name="contact[email]"
                  class="w-full px-4 py-3 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-500 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                  value="{{ form.email }}"
                  placeholder="{{ 'contact.form.email' | t | default: 'your@email.com' }}"
                  autocomplete="email"
                  required
                >
              </div>
              <div>
                <label for="ContactFormPhone" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">
                  {{ 'contact.form.phone' | t | default: 'Phone Number' }}
                </label>
                <input
                  type="tel"
                  id="ContactFormPhone"
                  name="contact[phone]"
                  class="w-full px-4 py-3 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-500 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                  value="{{ form.phone }}"
                  placeholder="{{ 'contact.form.phone' | t | default: '+1 (555) 123-4567' }}"
                  autocomplete="tel"
                >
              </div>
            </div>

            <!-- Subject -->
            <div class="mb-6">
              <label for="ContactFormSubject" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">
                {{ 'contact.form.subject' | t | default: 'Subject' }} *
              </label>
              <select
                id="ContactFormSubject"
                name="contact[subject]"
                class="w-full px-4 py-3 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                required
              >
                <option value="">{{ 'contact.form.subject_placeholder' | t | default: 'Select a subject...' }}</option>
                <option value="General Inquiry" {% if form.subject == 'General Inquiry' %}selected{% endif %}>
                  {{ 'contact.form.subject_general' | t | default: 'General Inquiry' }}
                </option>
                <option value="Order Support" {% if form.subject == 'Order Support' %}selected{% endif %}>
                  {{ 'contact.form.subject_order' | t | default: 'Order Support' }}
                </option>
                <option value="Product Question" {% if form.subject == 'Product Question' %}selected{% endif %}>
                  {{ 'contact.form.subject_product' | t | default: 'Product Question' }}
                </option>
                <option value="Returns & Exchanges" {% if form.subject == 'Returns & Exchanges' %}selected{% endif %}>
                  {{ 'contact.form.subject_returns' | t | default: 'Returns & Exchanges' }}
                </option>
                <option value="Technical Support" {% if form.subject == 'Technical Support' %}selected{% endif %}>
                  {{ 'contact.form.subject_technical' | t | default: 'Technical Support' }}
                </option>
                <option value="Partnership" {% if form.subject == 'Partnership' %}selected{% endif %}>
                  {{ 'contact.form.subject_partnership' | t | default: 'Partnership Opportunity' }}
                </option>
                <option value="Other" {% if form.subject == 'Other' %}selected{% endif %}>
                  {{ 'contact.form.subject_other' | t | default: 'Other' }}
                </option>
              </select>
            </div>

            <!-- Order Number (conditional) -->
            <div class="mb-6" id="orderNumberField" style="display: none;">
              <label for="ContactFormOrderNumber" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">
                {{ 'contact.form.order_number' | t | default: 'Order Number' }}
              </label>
              <input
                type="text"
                id="ContactFormOrderNumber"
                name="contact[order_number]"
                class="w-full px-4 py-3 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-500 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                value="{{ form.order_number }}"
                placeholder="{{ 'contact.form.order_number_placeholder' | t | default: '#1001' }}"
              >
            </div>

            <!-- Message -->
            <div class="mb-8">
              <label for="ContactFormMessage" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">
                {{ 'contact.form.message' | t | default: 'Message' }} *
              </label>
              <textarea
                id="ContactFormMessage"
                name="contact[body]"
                rows="6"
                class="w-full px-4 py-3 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 placeholder-neutral-500 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300 resize-vertical"
                placeholder="{{ 'contact.form.message_placeholder' | t | default: 'Tell us how we can help you...' }}"
                required
              >{{ form.body }}</textarea>
              <p class="text-sm text-neutral-500 dark:text-neutral-400 mt-2">
                {{ 'contact.form.message_note' | t | default: 'Please provide as much detail as possible to help us assist you better.' }}
              </p>
            </div>

            <!-- Newsletter Subscription -->
            <div class="mb-8">
              <label class="flex items-start gap-3 cursor-pointer">
                <input
                  type="checkbox"
                  name="contact[accepts_marketing]"
                  class="mt-1 w-4 h-4 text-primary-600 bg-neutral-100 border-neutral-300 rounded focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-neutral-800 focus:ring-2 dark:bg-neutral-700 dark:border-neutral-600"
                  {% if form.accepts_marketing %}checked{% endif %}
                >
                <span class="text-sm text-neutral-700 dark:text-neutral-300">
                  {{ 'contact.form.newsletter' | t | default: 'I\'d like to receive email updates about new products and special offers.' }}
                </span>
              </label>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-primary-600 hover:bg-primary-700 text-white font-medium py-4 px-6 rounded-lg transition-all duration-300 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
            >
              {{ 'contact.form.send' | t | default: 'Send Message' }}
            </button>
          {% endform %}
        </div>
      </div>

      <!-- Contact Information Sidebar -->
      <div class="lg:col-span-1">
        <div class="space-y-8">
          <!-- Contact Information -->
          <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-8">
            <h3 class="text-xl font-bold text-neutral-900 dark:text-neutral-100 mb-6">
              {{ 'contact.info.title' | t | default: 'Get in Touch' }}
            </h3>

            <div class="space-y-6">
              <!-- Store Address -->
              {% if shop.address != blank %}
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-medium text-neutral-900 dark:text-neutral-100 mb-1">
                      {{ 'contact.info.address' | t | default: 'Visit Our Store' }}
                    </h4>
                    <p class="text-neutral-600 dark:text-neutral-400 text-sm">
                      {{ shop.address }}
                    </p>
                  </div>
                </div>
              {% endif %}

              <!-- Phone Number -->
              {% if settings.contact_phone != blank %}
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-medium text-neutral-900 dark:text-neutral-100 mb-1">
                      {{ 'contact.info.phone' | t | default: 'Call Us' }}
                    </h4>
                    <a 
                      href="tel:{{ settings.contact_phone }}" 
                      class="text-neutral-600 dark:text-neutral-400 text-sm hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                    >
                      {{ settings.contact_phone }}
                    </a>
                  </div>
                </div>
              {% endif %}

              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium text-neutral-900 dark:text-neutral-100 mb-1">
                    {{ 'contact.info.email' | t | default: 'Email Us' }}
                  </h4>
                  <a 
                    href="mailto:{{ shop.email }}" 
                    class="text-neutral-600 dark:text-neutral-400 text-sm hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                  >
                    {{ shop.email }}
                  </a>
                </div>
              </div>

              <!-- Business Hours -->
              {% if settings.business_hours != blank %}
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-10 h-10 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-medium text-neutral-900 dark:text-neutral-100 mb-1">
                      {{ 'contact.info.hours' | t | default: 'Business Hours' }}
                    </h4>
                    <div class="text-neutral-600 dark:text-neutral-400 text-sm">
                      {{ settings.business_hours | newline_to_br }}
                    </div>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>

          <!-- FAQ Quick Links -->
          <div class="bg-gradient-to-br from-primary-50 to-primary-100 dark:from-primary-900/20 dark:to-primary-800/20 rounded-xl border border-primary-200 dark:border-primary-800 p-8">
            <h3 class="text-lg font-bold text-primary-900 dark:text-primary-100 mb-4">
              {{ 'contact.faq.title' | t | default: 'Quick Help' }}
            </h3>
            <p class="text-primary-700 dark:text-primary-300 text-sm mb-4">
              {{ 'contact.faq.description' | t | default: 'Find answers to common questions.' }}
            </p>
            <div class="space-y-3">
              <a 
                href="{{ pages['shipping-info'].url | default: '#' }}"
                class="block text-sm text-primary-700 dark:text-primary-300 hover:text-primary-800 dark:hover:text-primary-200 transition-colors"
              >
                • {{ 'contact.faq.shipping' | t | default: 'Shipping Information' }}
              </a>
              <a 
                href="{{ pages['returns'].url | default: '#' }}"
                class="block text-sm text-primary-700 dark:text-primary-300 hover:text-primary-800 dark:hover:text-primary-200 transition-colors"
              >
                • {{ 'contact.faq.returns' | t | default: 'Returns & Exchanges' }}
              </a>
              <a 
                href="{{ pages['size-guide'].url | default: '#' }}"
                class="block text-sm text-primary-700 dark:text-primary-300 hover:text-primary-800 dark:hover:text-primary-200 transition-colors"
              >
                • {{ 'contact.faq.size_guide' | t | default: 'Size Guide' }}
              </a>
              <a 
                href="{{ pages['faq'].url | default: '#' }}"
                class="block text-sm text-primary-700 dark:text-primary-300 hover:text-primary-800 dark:hover:text-primary-200 transition-colors"
              >
                • {{ 'contact.faq.general' | t | default: 'General FAQ' }}
              </a>
            </div>
          </div>

          <!-- Social Media -->
          <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-8">
            <h3 class="text-lg font-bold text-neutral-900 dark:text-neutral-100 mb-4">
              {{ 'contact.social.title' | t | default: 'Follow Us' }}
            </h3>
            <p class="text-neutral-600 dark:text-neutral-400 text-sm mb-6">
              {{ 'contact.social.description' | t | default: 'Stay connected on social media for updates and support.' }}
            </p>
            <div class="flex gap-3">
              {% if settings.social_facebook_link != blank %}
                <a 
                  href="{{ settings.social_facebook_link }}"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 bg-blue-600 hover:bg-blue-700 text-white rounded-lg flex items-center justify-center transition-colors"
                  aria-label="Facebook"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              {% endif %}
              {% if settings.social_twitter_link != blank %}
                <a 
                  href="{{ settings.social_twitter_link }}"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 bg-sky-500 hover:bg-sky-600 text-white rounded-lg flex items-center justify-center transition-colors"
                  aria-label="Twitter"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              {% endif %}
              {% if settings.social_instagram_link != blank %}
                <a 
                  href="{{ settings.social_instagram_link }}"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white rounded-lg flex items-center justify-center transition-colors"
                  aria-label="Instagram"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447c0-1.297.49-2.448 1.297-3.323.875-.807 2.026-1.297 3.323-1.297 1.297 0 2.448.49 3.323 1.297.807.875 1.297 2.026 1.297 3.323 0 1.297-.49 2.448-1.297 3.323-.875.807-2.026 1.297-3.323 1.297zm7.83-9.946c-.49 0-.875-.385-.875-.875 0-.49.385-.875.875-.875.49 0 .875.385.875.875 0 .49-.385.875-.875.875zm0 0"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Show/hide order number field based on subject selection
  document.getElementById('ContactFormSubject').addEventListener('change', function() {
    const orderField = document.getElementById('orderNumberField');
    const orderRelatedSubjects = ['Order Support', 'Returns & Exchanges'];
    
    if (orderRelatedSubjects.includes(this.value)) {
      orderField.style.display = 'block';
      document.getElementById('ContactFormOrderNumber').setAttribute('required', '');
    } else {
      orderField.style.display = 'none';
      document.getElementById('ContactFormOrderNumber').removeAttribute('required');
    }
  });

  // Form validation enhancement
  document.querySelector('.contact-form').addEventListener('submit', function(e) {
    const requiredFields = this.querySelectorAll('[required]');
    let isValid = true;
    
    requiredFields.forEach(field => {
      if (!field.value.trim()) {
        isValid = false;
        field.classList.add('border-red-500');
      } else {
        field.classList.remove('border-red-500');
      }
    });
    
    if (!isValid) {
      e.preventDefault();
      alert('Please fill in all required fields.');
    }
  });

  // Auto-resize textarea
  const textarea = document.getElementById('ContactFormMessage');
  textarea.addEventListener('input', function() {
    this.style.height = 'auto';
    this.style.height = this.scrollHeight + 'px';
  });

  // Form analytics (if needed)
  document.querySelector('.contact-form').addEventListener('submit', function() {
    // Track form submission for analytics
    if (typeof gtag !== 'undefined') {
      gtag('event', 'form_submit', {
        'event_category': 'Contact',
        'event_label': 'Contact Form'
      });
    }
  });
</script>