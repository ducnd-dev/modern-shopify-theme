{% comment %}
  Gift Card Template
  Displays purchased gift card details with redemption information
{% endcomment %}

<div class="gift-card-template min-h-screen bg-gradient-to-br from-neutral-50 to-neutral-100 dark:from-neutral-900 dark:to-neutral-800">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-600 rounded-full mb-6">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
          {{ 'gift_cards.issued.title' | t | default: 'Your Gift Card is Ready!' }}
        </h1>
        <p class="text-xl text-neutral-600 dark:text-neutral-400">
          {{ 'gift_cards.issued.subtext' | t | default: 'Here are your gift card details. Keep this information safe.' }}
        </p>
      </div>

      <!-- Gift Card -->
      <div class="bg-white dark:bg-neutral-800 rounded-2xl shadow-2xl border border-neutral-200 dark:border-neutral-700 overflow-hidden mb-8">
        <!-- Gift Card Header -->
        <div class="bg-gradient-to-r from-primary-600 via-primary-500 to-purple-600 p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="text-white">
              <h2 class="text-2xl font-bold mb-2">{{ shop.name }}</h2>
              <p class="text-primary-100">{{ 'gift_cards.issued.gift_card' | t | default: 'Gift Card' }}</p>
            </div>
            <div class="text-white text-right">
              <p class="text-primary-100 text-sm mb-1">{{ 'gift_cards.issued.amount' | t | default: 'Amount' }}</p>
              <p class="text-3xl font-bold">{{ gift_card.balance | money }}</p>
            </div>
          </div>
          
          <!-- Decorative Pattern -->
          <div class="absolute top-0 right-0 opacity-10">
            <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 100 100">
              <circle cx="50" cy="20" r="20"/>
              <circle cx="20" cy="50" r="15"/>
              <circle cx="80" cy="50" r="15"/>
              <circle cx="50" cy="80" r="20"/>
            </svg>
          </div>
        </div>

        <!-- Gift Card Body -->
        <div class="p-8">
          <!-- Gift Card Code -->
          <div class="mb-8">
            <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-3">
              {{ 'gift_cards.issued.redeem_html' | t | default: 'Gift Card Code' }}
            </label>
            <div class="flex items-center gap-4">
              <div class="flex-1">
                <input
                  type="text"
                  value="{{ gift_card.code | format_code }}"
                  id="GiftCardCode"
                  class="w-full px-6 py-4 text-lg font-mono bg-neutral-100 dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-lg text-neutral-900 dark:text-neutral-100 text-center tracking-widest focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  readonly
                  aria-label="Gift card code"
                >
              </div>
              <button
                onclick="copyGiftCardCode()"
                class="flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-medium py-4 px-6 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
                id="CopyButton"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <span class="hidden sm:inline">{{ 'gift_cards.issued.copy_code' | t | default: 'Copy' }}</span>
              </button>
            </div>
          </div>

          <!-- Gift Card Details -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-neutral-50 dark:bg-neutral-700 rounded-lg p-6">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h3 class="font-semibold text-neutral-900 dark:text-neutral-100">
                  {{ 'gift_cards.issued.initial_value' | t | default: 'Initial Value' }}
                </h3>
              </div>
              <p class="text-2xl font-bold text-neutral-900 dark:text-neutral-100">
                {{ gift_card.initial_value | money }}
              </p>
            </div>

            <div class="bg-neutral-50 dark:bg-neutral-700 rounded-lg p-6">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h3 class="font-semibold text-neutral-900 dark:text-neutral-100">
                  {{ 'gift_cards.issued.remaining_html' | t | default: 'Current Balance' }}
                </h3>
              </div>
              <p class="text-2xl font-bold text-neutral-900 dark:text-neutral-100">
                {{ gift_card.balance | money }}
              </p>
            </div>

            <div class="bg-neutral-50 dark:bg-neutral-700 rounded-lg p-6">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h3 class="font-semibold text-neutral-900 dark:text-neutral-100">
                  {{ 'gift_cards.issued.expires_on' | t | default: 'Expires' }}
                </h3>
              </div>
              <p class="text-lg font-medium text-neutral-900 dark:text-neutral-100">
                {% if gift_card.expires_on %}
                  {{ gift_card.expires_on | date: '%B %d, %Y' }}
                {% else %}
                  {{ 'gift_cards.issued.never_expires' | t | default: 'Never' }}
                {% endif %}
              </p>
            </div>
          </div>

          <!-- Usage Instructions -->
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-lg p-6 border border-blue-200 dark:border-blue-800">
            <h3 class="text-lg font-semibold text-blue-900 dark:text-blue-100 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              {{ 'gift_cards.issued.how_to_use' | t | default: 'How to Use Your Gift Card' }}
            </h3>
            <div class="space-y-3 text-blue-800 dark:text-blue-200">
              <div class="flex items-start gap-3">
                <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">1</span>
                <p>{{ 'gift_cards.issued.step_1' | t | default: 'Shop online or visit our store' }}</p>
              </div>
              <div class="flex items-start gap-3">
                <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">2</span>
                <p>{{ 'gift_cards.issued.step_2' | t | default: 'Enter your gift card code at checkout' }}</p>
              </div>
              <div class="flex items-start gap-3">
                <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">3</span>
                <p>{{ 'gift_cards.issued.step_3' | t | default: 'The balance will be applied to your purchase' }}</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- QR Code Section -->
      <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-8 mb-8">
        <div class="text-center">
          <h3 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
            {{ 'gift_cards.issued.qr_code_title' | t | default: 'QR Code for Easy Access' }}
          </h3>
          <p class="text-neutral-600 dark:text-neutral-400 mb-6">
            {{ 'gift_cards.issued.qr_code_text' | t | default: 'Scan this QR code with your phone to access your gift card anytime' }}
          </p>
          
          <!-- QR Code -->
          <div class="inline-block p-6 bg-white rounded-xl shadow-lg">
            <div class="w-48 h-48 mx-auto bg-neutral-100 border-2 border-dashed border-neutral-300 rounded-lg flex items-center justify-center">
              {% comment %} QR code would be generated by Shopify {% endcomment %}
              <div class="text-center">
                <svg class="w-16 h-16 text-neutral-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"></path>
                </svg>
                <p class="text-sm text-neutral-500">QR Code</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
        <button
          onclick="printGiftCard()"
          class="inline-flex items-center justify-center gap-2 bg-neutral-600 hover:bg-neutral-700 text-white font-medium py-3 px-6 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-500 focus:ring-offset-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
          </svg>
          {{ 'gift_cards.issued.print' | t | default: 'Print Gift Card' }}
        </button>
        
        <a
          href="mailto:?subject={{ 'gift_cards.issued.email_subject' | t | default: 'Gift Card from' }} {{ shop.name }}&body={{ 'gift_cards.issued.email_body' | t | default: 'I got you a gift card!' }} {{ gift_card.code | format_code }}"
          class="inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          {{ 'gift_cards.issued.send_email' | t | default: 'Send via Email' }}
        </a>

        <a
          href="{{ routes.root_url }}"
          class="inline-flex items-center justify-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-6 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
          {{ 'gift_cards.issued.shop_now' | t | default: 'Shop Now' }}
        </a>
      </div>

      <!-- Important Notes -->
      <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-6">
        <div class="flex items-start gap-3">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
              {{ 'gift_cards.issued.important_notes' | t | default: 'Important Notes' }}
            </h4>
            <ul class="text-yellow-700 dark:text-yellow-300 text-sm space-y-1">
              <li>• {{ 'gift_cards.issued.note_1' | t | default: 'Keep your gift card code safe and secure' }}</li>
              <li>• {{ 'gift_cards.issued.note_2' | t | default: 'Gift cards cannot be redeemed for cash' }}</li>
              <li>• {{ 'gift_cards.issued.note_3' | t | default: 'If unused, gift cards remain in your account' }}</li>
              <li>• {{ 'gift_cards.issued.note_4' | t | default: 'Contact us if you have any issues with your gift card' }}</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Print Styles -->
<style>
  @media print {
    .gift-card-template {
      background: white !important;
      color: black !important;
    }
    
    .bg-gradient-to-r {
      background: linear-gradient(to right, #4f46e5, #7c3aed) !important;
      -webkit-print-color-adjust: exact;
    }
    
    .print-hidden {
      display: none !important;
    }
    
    .gift-card-template .container {
      max-width: none !important;
      padding: 1rem !important;
    }
  }
</style>

<script>
  function copyGiftCardCode() {
    const codeInput = document.getElementById('GiftCardCode');
    const copyButton = document.getElementById('CopyButton');
    
    // Select and copy the text
    codeInput.select();
    codeInput.setSelectionRange(0, 99999); // For mobile devices
    
    try {
      navigator.clipboard.writeText(codeInput.value).then(function() {
        // Update button text
        const originalHTML = copyButton.innerHTML;
        copyButton.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="hidden sm:inline">Copied!</span>
        `;
        copyButton.classList.remove('bg-primary-600', 'hover:bg-primary-700');
        copyButton.classList.add('bg-green-600', 'hover:bg-green-700');
        
        // Reset after 2 seconds
        setTimeout(() => {
          copyButton.innerHTML = originalHTML;
          copyButton.classList.remove('bg-green-600', 'hover:bg-green-700');
          copyButton.classList.add('bg-primary-600', 'hover:bg-primary-700');
        }, 2000);
      });
    } catch (err) {
      // Fallback for older browsers
      document.execCommand('copy');
      alert('Gift card code copied to clipboard!');
    }
  }

  function printGiftCard() {
    // Hide elements that shouldn't be printed
    const elementsToHide = document.querySelectorAll('button, .print-hidden');
    elementsToHide.forEach(el => el.style.display = 'none');
    
    // Print the page
    window.print();
    
    // Restore hidden elements
    elementsToHide.forEach(el => el.style.display = '');
  }

  // Add keyboard shortcut for copying
  document.addEventListener('keydown', function(e) {
    if ((e.ctrlKey || e.metaKey) && e.key === 'c' && document.activeElement.id === 'GiftCardCode') {
      e.preventDefault();
      copyGiftCardCode();
    }
  });

  // Auto-select code when clicked
  document.getElementById('GiftCardCode').addEventListener('click', function() {
    this.select();
  });
</script>