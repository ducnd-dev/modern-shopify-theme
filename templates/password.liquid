{% comment %}
  Password Page Template
  Used when store is password protected
{% endcomment %}

<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#2563eb">

  <title>{{ shop.name }} - Coming Soon</title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}">

  {{ 'theme.css' | asset_url | stylesheet_tag }}

  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      margin: 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .password-container {
      width: 100%;
      max-width: 500px;
      padding: 2rem;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
      text-align: center;
      margin: 2rem;
    }
    
    .logo {
      margin-bottom: 2rem;
    }
    
    .logo h1 {
      margin: 0;
      font-size: 2.5rem;
      font-weight: 700;
      background: linear-gradient(135deg, #667eea, #764ba2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .coming-soon {
      font-size: 1.125rem;
      color: #6b7280;
      margin-bottom: 3rem;
      line-height: 1.6;
    }
    
    .password-form {
      margin-bottom: 2rem;
    }
    
    .form-group {
      position: relative;
      margin-bottom: 1.5rem;
    }
    
    .form-input {
      width: 100%;
      padding: 1rem 1.25rem;
      border: 2px solid #e5e7eb;
      border-radius: 12px;
      font-size: 1rem;
      transition: all 0.3s ease;
      background: #fff;
      box-sizing: border-box;
    }
    
    .form-input:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    
    .form-button {
      width: 100%;
      padding: 1rem 1.25rem;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      border: none;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 1rem;
    }
    
    .form-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }
    
    .social-links {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-top: 2rem;
    }
    
    .social-link {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 48px;
      height: 48px;
      background: rgba(102, 126, 234, 0.1);
      border-radius: 12px;
      color: #667eea;
      text-decoration: none;
      transition: all 0.3s ease;
    }
    
    .social-link:hover {
      background: #667eea;
      color: white;
      transform: translateY(-2px);
    }
    
    .error-message {
      color: #ef4444;
      font-size: 0.875rem;
      margin-top: 0.5rem;
      text-align: center;
    }
    
    .newsletter {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid #e5e7eb;
    }
    
    .newsletter h3 {
      margin: 0 0 1rem 0;
      font-size: 1.25rem;
      color: #374151;
    }
    
    .newsletter p {
      margin: 0 0 1.5rem 0;
      color: #6b7280;
      font-size: 0.875rem;
    }
    
    @media (max-width: 640px) {
      .password-container {
        margin: 1rem;
        padding: 1.5rem;
      }
      
      .logo h1 {
        font-size: 2rem;
      }
    }
  </style>
</head>

<body>
  <div class="password-container">
    <!-- Logo / Store Name -->
    <div class="logo">
      <h1>{{ shop.name }}</h1>
    </div>

    <!-- Coming Soon Message -->
    <div class="coming-soon">
      <p>
        We're putting the finishing touches on our new store. 
        Enter the password below to get a sneak peek!
      </p>
    </div>

    <!-- Password Form -->
    {% form 'storefront_password', class: 'password-form' %}
      <div class="form-group">
        <input
          type="password"
          name="password"
          id="password"
          class="form-input"
          placeholder="Enter store password"
          autocomplete="current-password"
          {% if form.errors %}
            aria-describedby="password-error"
          {% endif %}
        >
        
        {% if form.errors %}
          <div id="password-error" class="error-message">
            {{ form.errors.messages['password'] | default: 'Incorrect password. Please try again.' }}
          </div>
        {% endif %}
      </div>
      
      <button type="submit" class="form-button">
        Enter Store
      </button>
    {% endform %}

    <!-- Social Links -->
    {% if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_instagram_link != blank %}
      <div class="social-links">
        {% if settings.social_facebook_link != blank %}
          <a href="{{ settings.social_facebook_link }}" class="social-link" target="_blank" rel="noopener" aria-label="Facebook">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        {% endif %}

        {% if settings.social_twitter_link != blank %}
          <a href="{{ settings.social_twitter_link }}" class="social-link" target="_blank" rel="noopener" aria-label="Twitter">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
        {% endif %}

        {% if settings.social_instagram_link != blank %}
          <a href="{{ settings.social_instagram_link }}" class="social-link" target="_blank" rel="noopener" aria-label="Instagram">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.864 3.708 13.713 3.708 12.416s.49-2.448 1.418-3.323c.875-.875 2.026-1.297 3.323-1.297s2.448.422 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.83-9.404c-.49 0-.875-.385-.875-.875s.385-.875.875-.875.875.385.875.875-.385.875-.875.875zm-4.281 9.404c-1.297 0-2.448-.49-3.323-1.297-.928-.875-1.418-2.026-1.418-3.323s.49-2.448 1.418-3.323c.875-.875 2.026-1.297 3.323-1.297s2.448.422 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.323c-.875.807-2.026 1.297-3.323 1.297z"/>
            </svg>
          </a>
        {% endif %}
      </div>
    {% endif %}

    <!-- Newsletter Signup -->
    <div class="newsletter">
      <h3>Stay Updated</h3>
      <p>Get notified when we launch and receive exclusive early access.</p>
      
      {% form 'customer', class: 'newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter,password-page">
        
        {% if form.posted_successfully? %}
          <div style="color: #10b981; font-size: 0.875rem;">
            Thanks for subscribing! We'll notify you when we launch.
          </div>
        {% else %}
          <div class="form-group">
            <input
              type="email"
              name="contact[email]"
              class="form-input"
              placeholder="Enter your email address"
              required
            >
          </div>
          
          <button type="submit" class="form-button">
            Notify Me
          </button>
          
          {% if form.errors %}
            <div class="error-message">
              Please enter a valid email address.
            </div>
          {% endif %}
        {% endif %}
      {% endform %}
    </div>
  </div>

  <script>
    document.getElementById('password').focus();
  </script>
</body>
</html>