{% comment %}
  Cart Template
  Full cart page template (alternative to cart drawer)
{% endcomment %}

{% section 'header' %}

<main id="main" class="main-content" role="main">
  <div class="container section-spacing">
    <div class="max-w-4xl mx-auto">
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-3xl font-bold mb-4">Shopping Cart</h1>
        <p class="text-gray-600 dark:text-gray-400">
          {% if cart.item_count > 0 %}
            You have {{ cart.item_count }} {% if cart.item_count == 1 %}item{% else %}items{% endif %} in your cart
          {% else %}
            Your cart is currently empty
          {% endif %}
        </p>
      </div>

      {% if cart.item_count > 0 %}
        <form action="/cart" method="post" novalidate class="cart-form">
          <!-- Cart Items -->
          <div class="cart-items">
            {% for item in cart.items %}
              <div class="cart-item border-b border-gray-200 dark:border-gray-700 py-6" data-key="{{ item.key }}">
                <div class="flex items-center gap-6">
                  <!-- Product Image -->
                  <div class="flex-shrink-0">
                    <a href="{{ item.product.url }}">
                      <img 
                        src="{{ item.image | image_url: width: 120 }}"
                        alt="{{ item.image.alt | escape }}"
                        class="w-20 h-20 object-cover rounded-lg"
                        {% if settings.lazy_loading_enabled %}loading="lazy"{% endif %}
                      >
                    </a>
                  </div>

                  <!-- Product Details -->
                  <div class="flex-1">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                      <!-- Product Info -->
                      <div class="md:col-span-2">
                        <h3 class="font-medium mb-1">
                          <a href="{{ item.product.url }}" class="hover:text-primary transition-colors">
                            {{ item.product.title }}
                          </a>
                        </h3>
                        
                        {% if item.variant.title != 'Default Title' %}
                          <p class="text-sm text-gray-500 mb-1">{{ item.variant.title }}</p>
                        {% endif %}

                        {% if item.selling_plan_allocation %}
                          <p class="text-sm text-gray-500 mb-1">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                        {% endif %}

                        <!-- Item Price -->
                        <div class="price-wrapper">
                          {% if item.original_price != item.final_price %}
                            <span class="price price--on-sale font-medium">{{ item.final_price | money }}</span>
                            <span class="price--compare-at ml-2">{{ item.original_price | money }}</span>
                          {% else %}
                            <span class="price font-medium">{{ item.original_price | money }}</span>
                          {% endif %}
                        </div>

                        <!-- Mobile Quantity (shown on mobile) -->
                        <div class="mt-3 md:hidden">
                          <div class="flex items-center justify-between">
                            <div class="quantity-selector">
                              <button 
                                type="button" 
                                class="quantity-btn"
                                data-quantity-change="-1"
                                data-key="{{ item.key }}"
                                aria-label="Decrease quantity"
                              >-</button>
                              <input 
                                type="number" 
                                name="updates[{{ item.key }}]"
                                value="{{ item.quantity }}" 
                                min="0"
                                class="quantity-input"
                                data-key="{{ item.key }}"
                              >
                              <button 
                                type="button" 
                                class="quantity-btn"
                                data-quantity-change="1"
                                data-key="{{ item.key }}"
                                aria-label="Increase quantity"
                              >+</button>
                            </div>
                            
                            <button 
                              type="button"
                              class="text-red-500 hover:text-red-700 transition-colors"
                              data-remove-item
                              data-key="{{ item.key }}"
                              aria-label="Remove item"
                            >
                              Remove
                            </button>
                          </div>
                        </div>
                      </div>

                      <!-- Desktop Quantity & Actions -->
                      <div class="hidden md:flex flex-col items-end justify-between">
                        <div class="quantity-selector mb-2">
                          <button 
                            type="button" 
                            class="quantity-btn"
                            data-quantity-change="-1"
                            data-key="{{ item.key }}"
                            aria-label="Decrease quantity"
                          >-</button>
                          <input 
                            type="number" 
                            name="updates[{{ item.key }}]"
                            value="{{ item.quantity }}" 
                            min="0"
                            class="quantity-input"
                            data-key="{{ item.key }}"
                          >
                          <button 
                            type="button" 
                            class="quantity-btn"
                            data-quantity-change="1"
                            data-key="{{ item.key }}"
                            aria-label="Increase quantity"
                          >+</button>
                        </div>

                        <div class="flex items-center gap-4">
                          <!-- Line Total -->
                          <span class="font-semibold">{{ item.final_line_price | money }}</span>
                          
                          <!-- Remove Button -->
                          <button 
                            type="button"
                            class="text-red-500 hover:text-red-700 transition-colors"
                            data-remove-item
                            data-key="{{ item.key }}"
                            aria-label="Remove item"
                          >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>

          <!-- Cart Footer -->
          <div class="cart-footer mt-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Cart Notes -->
              {% if settings.cart_notes_enable %}
                <div class="cart-notes">
                  <label for="cart-note" class="block text-sm font-medium mb-2">Order notes</label>
                  <textarea 
                    id="cart-note"
                    name="note"
                    rows="4"
                    placeholder="Special instructions for your order..."
                    class="form-input w-full"
                  >{{ cart.note }}</textarea>
                </div>
              {% endif %}

              <!-- Cart Totals -->
              <div class="cart-totals bg-gray-50 dark:bg-gray-900 rounded-lg p-6">
                <h3 class="text-lg font-semibold mb-4">Order Summary</h3>
                
                <div class="space-y-3">
                  <!-- Subtotal -->
                  <div class="flex justify-between">
                    <span>Subtotal ({{ cart.item_count }} {% if cart.item_count == 1 %}item{% else %}items{% endif %})</span>
                    <span class="font-medium">{{ cart.total_price | money }}</span>
                  </div>

                  <!-- Shipping -->
                  <div class="flex justify-between text-sm text-gray-500">
                    <span>Shipping</span>
                    <span>Calculated at checkout</span>
                  </div>

                  <!-- Taxes -->
                  <div class="flex justify-between text-sm text-gray-500">
                    <span>Taxes</span>
                    <span>Calculated at checkout</span>
                  </div>
                  
                  <hr class="border-gray-200 dark:border-gray-700">
                  
                  <!-- Total -->
                  <div class="flex justify-between text-lg font-semibold">
                    <span>Total</span>
                    <span>{{ cart.total_price | money }}</span>
                  </div>
                </div>

                <!-- Free Shipping Progress -->
                {% if settings.free_shipping_bar_enabled %}
                  {% assign remaining = settings.free_shipping_threshold | minus: cart.total_price %}
                  <div class="mt-4">
                    {% if remaining <= 0 %}
                      <div class="flex items-center text-green-600 text-sm">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        {{ settings.free_shipping_message | default: 'You qualify for free shipping!' }}
                      </div>
                    {% else %}
                      <div class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                        Add {{ remaining | money }} more for free shipping
                      </div>
                      {% assign progress = cart.total_price | times: 100 | divided_by: settings.free_shipping_threshold %}
                      <div class="shipping-progress">
                        <div class="shipping-progress-bar" style="width: {{ progress }}%"></div>
                      </div>
                    {% endif %}
                  </div>
                {% endif %}

                <!-- Action Buttons -->
                <div class="mt-6 space-y-3">
                  <button type="submit" name="update" class="btn btn-secondary w-full">
                    Update Cart
                  </button>
                  <button type="submit" name="checkout" class="btn btn-primary w-full">
                    Proceed to Checkout
                  </button>
                </div>

                <!-- Continue Shopping -->
                <div class="mt-4 text-center">
                  <a href="/collections/all" class="text-sm text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 transition-colors">
                    Continue shopping
                  </a>
                </div>
              </div>
            </div>
          </div>
        </form>
      {% else %}
        <!-- Empty Cart -->
        <div class="empty-cart text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Your cart is empty</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-8">Looks like you haven't added anything to your cart yet.</p>
          <a href="/collections/all" class="btn btn-primary">Start Shopping</a>
        </div>
      {% endif %}
    </div>
  </div>
</main>

{% section 'footer' %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  const cartForm = document.querySelector('.cart-form');
  
  if (!cartForm) return;

  // Quantity controls
  const quantityBtns = document.querySelectorAll('[data-quantity-change]');
  
  quantityBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      const change = parseInt(this.dataset.quantityChange);
      const key = this.dataset.key;
      const input = document.querySelector(`input[data-key="${key}"]`);
      
      if (input) {
        const currentValue = parseInt(input.value);
        const newValue = Math.max(0, currentValue + change);
        input.value = newValue;
        
        // Auto-submit form after a delay
        clearTimeout(window.cartUpdateTimeout);
        window.cartUpdateTimeout = setTimeout(() => {
          updateCart();
        }, 1000);
      }
    });
  });

  // Remove item buttons
  const removeButtons = document.querySelectorAll('[data-remove-item]');
  
  removeButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      const key = this.dataset.key;
      const input = document.querySelector(`input[data-key="${key}"]`);
      
      if (input) {
        input.value = 0;
        updateCart();
      }
    });
  });

  // Quantity input changes
  const quantityInputs = document.querySelectorAll('.quantity-input');
  
  quantityInputs.forEach(input => {
    input.addEventListener('change', function() {
      clearTimeout(window.cartUpdateTimeout);
      window.cartUpdateTimeout = setTimeout(() => {
        updateCart();
      }, 1000);
    });
  });

  function updateCart() {
    const formData = new FormData(cartForm);
    
    fetch('/cart/update.js', {
      method: 'POST',
      body: formData
    })
    .then(response => response.json())
    .then(cart => {
      // Reload page to reflect changes
      window.location.reload();
    })
    .catch(error => {
      console.error('Error updating cart:', error);
    });
  }
});
</script>