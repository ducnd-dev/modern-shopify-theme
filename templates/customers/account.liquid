{% comment %}
  Customer Account Dashboard Template
  Main account page with order history, addresses, and account settings
{% endcomment %}

<div class="customer-account min-h-screen bg-neutral-50 dark:bg-neutral-900">
  <!-- Account Header -->
  <div class="bg-white dark:bg-neutral-800 border-b border-neutral-200 dark:border-neutral-700">
    <div class="container mx-auto px-4 py-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h1 class="text-3xl font-bold text-neutral-900 dark:text-neutral-100 mb-2">
            {{ 'customer.account.title' | t | default: 'My Account' }}
          </h1>
          <p class="text-neutral-600 dark:text-neutral-400">
            Welcome back, {{ customer.first_name | default: customer.email }}
          </p>
        </div>
        <div class="flex items-center gap-4">
          <a 
            href="{{ routes.account_logout_url }}" 
            class="inline-flex items-center gap-2 text-red-600 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 font-medium transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            {{ 'customer.account.sign_out' | t | default: 'Sign Out' }}
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Account Navigation -->
      <div class="lg:col-span-1">
        <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-6 sticky top-8">
          <h2 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 mb-4">
            {{ 'customer.account.navigation' | t | default: 'Account Menu' }}
          </h2>
          <nav class="space-y-2">
            <a 
              href="#overview" 
              class="account-nav-link flex items-center gap-3 p-3 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-700 transition-colors active"
              onclick="showSection('overview')"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v1H8V5z"></path>
              </svg>
              {{ 'customer.account.overview' | t | default: 'Overview' }}
            </a>
            <a 
              href="#orders" 
              class="account-nav-link flex items-center gap-3 p-3 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-700 transition-colors"
              onclick="showSection('orders')"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
              {{ 'customer.orders.title' | t | default: 'Orders' }}
              {% if customer.orders.size > 0 %}
                <span class="bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 text-xs px-2 py-1 rounded-full ml-auto">
                  {{ customer.orders.size }}
                </span>
              {% endif %}
            </a>
            <a 
              href="#addresses" 
              class="account-nav-link flex items-center gap-3 p-3 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-700 transition-colors"
              onclick="showSection('addresses')"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              {{ 'customer.addresses.title' | t | default: 'Addresses' }}
            </a>
            <a 
              href="#profile" 
              class="account-nav-link flex items-center gap-3 p-3 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-700 transition-colors"
              onclick="showSection('profile')"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              {{ 'customer.account.details' | t | default: 'Profile' }}
            </a>
          </nav>
        </div>
      </div>

      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Overview Section -->
        <div id="overview-section" class="account-section">
          <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-8 mb-8">
            <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100 mb-6">
              Account Overview
            </h2>
            
            <!-- Quick Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
              <div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-lg p-6">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-blue-600 dark:text-blue-400 text-sm font-medium">Total Orders</p>
                    <p class="text-2xl font-bold text-blue-900 dark:text-blue-100">{{ customer.orders.size }}</p>
                  </div>
                  <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                  </svg>
                </div>
              </div>

              <div class="bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 rounded-lg p-6">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-green-600 dark:text-green-400 text-sm font-medium">Addresses</p>
                    <p class="text-2xl font-bold text-green-900 dark:text-green-100">{{ customer.addresses.size }}</p>
                  </div>
                  <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  </svg>
                </div>
              </div>

              <div class="bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/20 rounded-lg p-6">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-purple-600 dark:text-purple-400 text-sm font-medium">Member Since</p>
                    <p class="text-2xl font-bold text-purple-900 dark:text-purple-100">
                      {{ customer.created_at | date: '%Y' }}
                    </p>
                  </div>
                  <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Recent Orders Preview -->
            {% if customer.orders.size > 0 %}
              <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 mb-4">
                Recent Orders
              </h3>
              <div class="space-y-4">
                {% for order in customer.orders limit: 3 %}
                  <div class="flex items-center justify-between p-4 bg-neutral-50 dark:bg-neutral-700 rounded-lg">
                    <div>
                      <p class="font-medium text-neutral-900 dark:text-neutral-100">
                        Order #{{ order.name }}
                      </p>
                      <p class="text-sm text-neutral-600 dark:text-neutral-400">
                        {{ order.created_at | date: '%B %d, %Y' }}
                      </p>
                    </div>
                    <div class="text-right">
                      <p class="font-medium text-neutral-900 dark:text-neutral-100">
                        {{ order.total_price | money }}
                      </p>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                        {% case order.fulfillment_status %}
                          {% when 'fulfilled' %}bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300
                          {% when 'partial' %}bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300
                          {% else %}bg-neutral-100 text-neutral-800 dark:bg-neutral-700 dark:text-neutral-300
                        {% endcase %}">
                        {{ order.fulfillment_status | default: 'Pending' | capitalize }}
                      </span>
                    </div>
                  </div>
                {% endfor %}
              </div>
              {% if customer.orders.size > 3 %}
                <div class="mt-4 text-center">
                  <button 
                    onclick="showSection('orders')"
                    class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium"
                  >
                    View All Orders ({{ customer.orders.size }})
                  </button>
                </div>
              {% endif %}
            {% else %}
              <div class="text-center py-8">
                <svg class="w-16 h-16 text-neutral-400 dark:text-neutral-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
                <h3 class="text-lg font-medium text-neutral-900 dark:text-neutral-100 mb-2">No orders yet</h3>
                <p class="text-neutral-600 dark:text-neutral-400 mb-4">Start shopping to see your orders here</p>
                <a 
                  href="{{ routes.collections_url }}" 
                  class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-lg transition-colors"
                >
                  Start Shopping
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </a>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Orders Section -->
        <div id="orders-section" class="account-section hidden">
          <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-8">
            <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100 mb-6">
              {{ 'customer.orders.title' | t | default: 'Order History' }}
            </h2>

            {% if customer.orders.size > 0 %}
              <div class="space-y-6">
                {% paginate customer.orders by 10 %}
                  {% for order in customer.orders %}
                    <div class="border border-neutral-200 dark:border-neutral-600 rounded-lg p-6">
                      <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                        <div>
                          <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">
                            Order #{{ order.name }}
                          </h3>
                          <p class="text-neutral-600 dark:text-neutral-400">
                            {{ order.created_at | date: '%B %d, %Y at %I:%M %p' }}
                          </p>
                        </div>
                        <div class="flex items-center gap-4 mt-4 md:mt-0">
                          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                            {% case order.fulfillment_status %}
                              {% when 'fulfilled' %}bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300
                              {% when 'partial' %}bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300
                              {% else %}bg-neutral-100 text-neutral-800 dark:bg-neutral-700 dark:text-neutral-300
                            {% endcase %}">
                            {{ order.fulfillment_status | default: 'Pending' | capitalize }}
                          </span>
                          <span class="text-lg font-bold text-neutral-900 dark:text-neutral-100">
                            {{ order.total_price | money }}
                          </span>
                        </div>
                      </div>

                      {% if order.line_items.size > 0 %}
                        <div class="border-t border-neutral-200 dark:border-neutral-600 pt-4">
                          <div class="grid gap-4">
                            {% for line_item in order.line_items limit: 3 %}
                              <div class="flex items-center gap-4">
                                {% if line_item.image %}
                                  <img 
                                    src="{{ line_item.image | image_url: width: 60 }}" 
                                    alt="{{ line_item.title }}"
                                    class="w-15 h-15 object-cover rounded-lg"
                                  >
                                {% else %}
                                  <div class="w-15 h-15 bg-neutral-200 dark:bg-neutral-600 rounded-lg flex items-center justify-center">
                                    <svg class="w-6 h-6 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                  </div>
                                {% endif %}
                                <div class="flex-1">
                                  <h4 class="font-medium text-neutral-900 dark:text-neutral-100">
                                    {{ line_item.title }}
                                  </h4>
                                  {% if line_item.variant.title != 'Default Title' %}
                                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                                      {{ line_item.variant.title }}
                                    </p>
                                  {% endif %}
                                  <p class="text-sm text-neutral-600 dark:text-neutral-400">
                                    Qty: {{ line_item.quantity }} Ã— {{ line_item.price | money }}
                                  </p>
                                </div>
                              </div>
                            {% endfor %}
                            {% if order.line_items.size > 3 %}
                              <p class="text-sm text-neutral-600 dark:text-neutral-400">
                                and {{ order.line_items.size | minus: 3 }} more item{% if order.line_items.size > 4 %}s{% endif %}
                              </p>
                            {% endif %}
                          </div>
                        </div>
                      {% endif %}

                      <div class="flex justify-between items-center mt-4 pt-4 border-t border-neutral-200 dark:border-neutral-600">
                        <div class="text-sm text-neutral-600 dark:text-neutral-400">
                          {% if order.fulfillment_status == 'fulfilled' and order.tracking_number %}
                            Tracking: {{ order.tracking_number }}
                          {% endif %}
                        </div>
                        <a 
                          href="{{ order.customer_url }}" 
                          class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium"
                        >
                          View Details
                        </a>
                      </div>
                    </div>
                  {% endfor %}

                  {% if paginate.pages > 1 %}
                    <nav class="flex justify-center mt-8">
                      <div class="flex items-center gap-2">
                        {% if paginate.previous %}
                          <a href="{{ paginate.previous.url }}" class="px-3 py-2 text-sm font-medium text-neutral-700 dark:text-neutral-300 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-md hover:bg-neutral-50 dark:hover:bg-neutral-600">
                            Previous
                          </a>
                        {% endif %}

                        {% for part in paginate.parts %}
                          {% if part.is_link %}
                            <a href="{{ part.url }}" class="px-3 py-2 text-sm font-medium text-neutral-700 dark:text-neutral-300 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-md hover:bg-neutral-50 dark:hover:bg-neutral-600">
                              {{ part.title }}
                            </a>
                          {% else %}
                            <span class="px-3 py-2 text-sm font-medium text-white bg-primary-600 border border-primary-600 rounded-md">
                              {{ part.title }}
                            </span>
                          {% endif %}
                        {% endfor %}

                        {% if paginate.next %}
                          <a href="{{ paginate.next.url }}" class="px-3 py-2 text-sm font-medium text-neutral-700 dark:text-neutral-300 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-md hover:bg-neutral-50 dark:hover:bg-neutral-600">
                            Next
                          </a>
                        {% endif %}
                      </div>
                    </nav>
                  {% endif %}
                {% endpaginate %}
              </div>
            {% else %}
              <div class="text-center py-12">
                <svg class="w-20 h-20 text-neutral-300 dark:text-neutral-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
                <h3 class="text-xl font-medium text-neutral-900 dark:text-neutral-100 mb-2">No orders yet</h3>
                <p class="text-neutral-600 dark:text-neutral-400 mb-6">When you place your first order, it will appear here</p>
                <a 
                  href="{{ routes.collections_url }}" 
                  class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-6 rounded-lg transition-colors"
                >
                  Start Shopping
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </a>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Addresses Section -->
        <div id="addresses-section" class="account-section hidden">
          <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-8">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100">
                {{ 'customer.addresses.title' | t | default: 'Addresses' }}
              </h2>
              <a 
                href="{{ routes.account_addresses_url }}" 
                class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-lg transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Address
              </a>
            </div>

            {% if customer.addresses.size > 0 %}
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {% for address in customer.addresses %}
                  <div class="border border-neutral-200 dark:border-neutral-600 rounded-lg p-6 {% if address == customer.default_address %}ring-2 ring-primary-500{% endif %}">
                    {% if address == customer.default_address %}
                      <div class="flex items-center gap-2 mb-3">
                        <svg class="w-4 h-4 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span class="text-sm font-medium text-primary-600 dark:text-primary-400">Default Address</span>
                      </div>
                    {% endif %}
                    
                    <div class="space-y-1 text-neutral-900 dark:text-neutral-100">
                      <p class="font-medium">{{ address.first_name }} {{ address.last_name }}</p>
                      <p>{{ address.address1 }}</p>
                      {% if address.address2 != blank %}
                        <p>{{ address.address2 }}</p>
                      {% endif %}
                      <p>{{ address.city }}, {{ address.province }} {{ address.zip }}</p>
                      <p>{{ address.country }}</p>
                      {% if address.phone != blank %}
                        <p class="text-neutral-600 dark:text-neutral-400">{{ address.phone }}</p>
                      {% endif %}
                    </div>

                    <div class="flex gap-2 mt-4">
                      <a 
                        href="{{ routes.account_addresses_url }}/{{ address.id }}" 
                        class="text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium"
                      >
                        Edit
                      </a>
                      {% unless address == customer.default_address %}
                        <button 
                          class="text-sm text-red-600 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 font-medium"
                          onclick="deleteAddress('{{ address.id }}')"
                        >
                          Delete
                        </button>
                      {% endunless %}
                    </div>
                  </div>
                {% endfor %}
              </div>
            {% else %}
              <div class="text-center py-12">
                <svg class="w-20 h-20 text-neutral-300 dark:text-neutral-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <h3 class="text-xl font-medium text-neutral-900 dark:text-neutral-100 mb-2">No addresses saved</h3>
                <p class="text-neutral-600 dark:text-neutral-400 mb-6">Add an address for faster checkout</p>
                <a 
                  href="{{ routes.account_addresses_url }}" 
                  class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-6 rounded-lg transition-colors"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  Add Your First Address
                </a>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Profile Section -->
        <div id="profile-section" class="account-section hidden">
          <div class="bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-8">
            <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100 mb-6">
              {{ 'customer.account.details' | t | default: 'Account Details' }}
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <!-- Personal Information -->
              <div>
                <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 mb-4">
                  Personal Information
                </h3>
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                      First Name
                    </label>
                    <p class="text-neutral-900 dark:text-neutral-100">
                      {{ customer.first_name | default: 'Not provided' }}
                    </p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                      Last Name
                    </label>
                    <p class="text-neutral-900 dark:text-neutral-100">
                      {{ customer.last_name | default: 'Not provided' }}
                    </p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                      Email Address
                    </label>
                    <p class="text-neutral-900 dark:text-neutral-100">
                      {{ customer.email }}
                    </p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                      Member Since
                    </label>
                    <p class="text-neutral-900 dark:text-neutral-100">
                      {{ customer.created_at | date: '%B %d, %Y' }}
                    </p>
                  </div>
                </div>
              </div>

              <!-- Account Settings -->
              <div>
                <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 mb-4">
                  Account Settings
                </h3>
                <div class="space-y-4">
                  <div class="flex items-center justify-between p-4 bg-neutral-50 dark:bg-neutral-700 rounded-lg">
                    <div>
                      <p class="font-medium text-neutral-900 dark:text-neutral-100">Marketing Emails</p>
                      <p class="text-sm text-neutral-600 dark:text-neutral-400">Receive updates and offers</p>
                    </div>
                    <span class="text-sm font-medium 
                      {% if customer.accepts_marketing %}text-green-700 dark:text-green-300{% else %}text-red-700 dark:text-red-300{% endif %}">
                      {% if customer.accepts_marketing %}Subscribed{% else %}Unsubscribed{% endif %}
                    </span>
                  </div>

                  <div class="space-y-3">
                    <button 
                      onclick="showPasswordChangeForm()"
                      class="w-full text-left p-4 bg-neutral-50 dark:bg-neutral-700 rounded-lg hover:bg-neutral-100 dark:hover:bg-neutral-600 transition-colors"
                    >
                      <div class="flex items-center justify-between">
                        <div>
                          <p class="font-medium text-neutral-900 dark:text-neutral-100">Change Password</p>
                          <p class="text-sm text-neutral-600 dark:text-neutral-400">Update your account password</p>
                        </div>
                        <svg class="w-5 h-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                    </button>

                    <a 
                      href="{{ routes.account_addresses_url }}"
                      class="block w-full text-left p-4 bg-neutral-50 dark:bg-neutral-700 rounded-lg hover:bg-neutral-100 dark:hover:bg-neutral-600 transition-colors"
                    >
                      <div class="flex items-center justify-between">
                        <div>
                          <p class="font-medium text-neutral-900 dark:text-neutral-100">Manage Addresses</p>
                          <p class="text-sm text-neutral-600 dark:text-neutral-400">Update your shipping addresses</p>
                        </div>
                        <svg class="w-5 h-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function showSection(sectionName) {
    // Hide all sections
    document.querySelectorAll('.account-section').forEach(section => {
      section.classList.add('hidden');
    });
    
    // Remove active class from all nav links
    document.querySelectorAll('.account-nav-link').forEach(link => {
      link.classList.remove('active', 'bg-primary-100', 'dark:bg-primary-900/30', 'text-primary-700', 'dark:text-primary-300');
    });
    
    // Show selected section
    document.getElementById(sectionName + '-section').classList.remove('hidden');
    
    // Add active class to clicked nav link
    event.target.closest('.account-nav-link').classList.add('active', 'bg-primary-100', 'dark:bg-primary-900/30', 'text-primary-700', 'dark:text-primary-300');
    
    // Update URL hash
    window.location.hash = sectionName;
  }

  function deleteAddress(addressId) {
    if (confirm('Are you sure you want to delete this address?')) {
      // Create a form to delete the address
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/account/addresses/' + addressId;
      
      const methodInput = document.createElement('input');
      methodInput.type = 'hidden';
      methodInput.name = '_method';
      methodInput.value = 'delete';
      
      form.appendChild(methodInput);
      document.body.appendChild(form);
      form.submit();
    }
  }

  function showPasswordChangeForm() {
    // This would typically open a modal or redirect to a password change page
    // For now, we'll redirect to the account page with a hash
    window.location.href = '/account#change-password';
  }

  // Initialize based on URL hash
  document.addEventListener('DOMContentLoaded', function() {
    const hash = window.location.hash.substring(1);
    const validSections = ['overview', 'orders', 'addresses', 'profile'];
    
    if (validSections.includes(hash)) {
      showSection(hash);
    } else {
      // Default to overview
      document.querySelector('.account-nav-link').classList.add('active', 'bg-primary-100', 'dark:bg-primary-900/30', 'text-primary-700', 'dark:text-primary-300');
    }
  });
</script>