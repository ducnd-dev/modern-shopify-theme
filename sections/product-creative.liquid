{% comment %}
  Creative Product Page with Immersive Experience
  Features: Split layout, 360° view, AR preview, interactive galleries
{% endcomment %}

<style>
  .product-creative-{{ section.id }} {
    --product-primary: {{ section.settings.primary_color | default: '#0ea5e9' }};
    --product-secondary: {{ section.settings.secondary_color | default: '#8b5cf6' }};
    --product-accent: {{ section.settings.accent_color | default: '#f59e0b' }};
  }

  /* Main Product Layout */
  .product-main {
    min-height: 100vh;
    display: flex;
    align-items: stretch;
  }

  .product-gallery {
    flex: 1;
    position: relative;
    background: linear-gradient(135deg, #f8fafc, #e2e8f0);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .product-info {
    flex: 1;
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: white;
    position: relative;
  }

  /* Image Gallery */
  .main-image-container {
    position: relative;
    width: 80%;
    max-width: 600px;
    aspect-ratio: 1;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.1);
    cursor: zoom-in;
  }

  .main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .main-image:hover {
    transform: scale(1.1);
  }

  /* Floating Elements */
  .floating-badge {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: var(--product-accent);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    animation: floatBadge 3s ease-in-out infinite;
    z-index: 10;
  }

  @keyframes floatBadge {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .floating-price {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 1.5rem 2rem;
    border-radius: 20px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    animation: floatPrice 4s ease-in-out infinite;
  }

  @keyframes floatPrice {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-5px) rotate(1deg); }
  }

  .floating-price .price {
    font-size: 2rem;
    font-weight: 900;
    color: var(--product-primary);
    margin: 0;
  }

  .floating-price .compare-price {
    font-size: 1.125rem;
    color: #64748b;
    text-decoration: line-through;
    margin-top: 0.25rem;
  }

  /* Thumbnail Gallery */
  .thumbnail-gallery {
    position: absolute;
    left: 2rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    z-index: 10;
  }

  .thumbnail {
    width: 80px;
    height: 80px;
    border-radius: 15px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 3px solid transparent;
  }

  .thumbnail.active {
    border-color: var(--product-primary);
    transform: scale(1.05);
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .thumbnail:hover {
    transform: scale(1.1);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  /* Product Information */
  .product-title {
    font-size: 3rem;
    font-weight: 900;
    color: #1a202c;
    margin-bottom: 1rem;
    line-height: 1.2;
    background: linear-gradient(135deg, #1a202c, var(--product-primary));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .product-vendor {
    font-size: 1.125rem;
    color: var(--product-secondary);
    font-weight: 600;
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .product-description {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #4a5568;
    margin-bottom: 2rem;
  }

  /* Product Features */
  .product-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: #f8fafc;
    border-radius: 15px;
    transition: all 0.3s ease;
  }

  .feature-item:hover {
    background: var(--product-primary);
    color: white;
    transform: translateY(-3px);
  }

  .feature-icon {
    width: 40px;
    height: 40px;
    background: var(--product-accent);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .feature-item:hover .feature-icon {
    background: white;
    color: var(--product-primary);
  }

  /* Product Options */
  .product-form {
    margin: 2rem 0;
  }

  .option-group {
    margin-bottom: 2rem;
  }

  .option-label {
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 1rem;
    font-size: 1.125rem;
  }

  .option-values {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .option-value {
    padding: 0.75rem 1.5rem;
    border: 2px solid #e2e8f0;
    border-radius: 25px;
    background: white;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .option-value:hover,
  .option-value.selected {
    border-color: var(--product-primary);
    background: var(--product-primary);
    color: white;
    transform: translateY(-2px);
  }

  .option-value.color {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    padding: 0;
    position: relative;
  }

  .option-value.color::after {
    content: '';
    position: absolute;
    inset: 4px;
    border-radius: 50%;
    background: var(--color);
  }

  .option-value.color.selected::before {
    content: '✓';
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    z-index: 1;
  }

  /* Quantity & Add to Cart */
  .purchase-section {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin: 2rem 0;
  }

  .quantity-selector {
    display: flex;
    align-items: center;
    border: 2px solid #e2e8f0;
    border-radius: 15px;
    overflow: hidden;
  }

  .quantity-btn {
    width: 50px;
    height: 50px;
    border: none;
    background: #f8fafc;
    cursor: pointer;
    font-size: 1.25rem;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .quantity-btn:hover {
    background: var(--product-primary);
    color: white;
  }

  .quantity-input {
    width: 60px;
    height: 50px;
    border: none;
    text-align: center;
    font-weight: bold;
    font-size: 1.125rem;
  }

  .add-to-cart-btn {
    flex: 1;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--product-primary), var(--product-secondary));
    border: none;
    border-radius: 15px;
    color: white;
    font-size: 1.125rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .add-to-cart-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--product-secondary), var(--product-accent));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .add-to-cart-btn:hover::before {
    opacity: 1;
  }

  .add-to-cart-btn span {
    position: relative;
    z-index: 1;
  }

  .add-to-cart-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
  }

  /* Special Features */
  .special-features {
    display: flex;
    gap: 1rem;
    margin: 2rem 0;
  }

  .special-btn {
    flex: 1;
    padding: 1rem;
    border: 2px solid #e2e8f0;
    border-radius: 15px;
    background: white;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    font-weight: 600;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .special-btn:hover {
    border-color: var(--product-accent);
    background: var(--product-accent);
    color: white;
    transform: translateY(-3px);
  }

  .special-btn-icon {
    width: 24px;
    height: 24px;
  }

  /* Product Details Tabs */
  .product-tabs {
    margin-top: 3rem;
  }

  .tab-buttons {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 2rem;
    border-bottom: 2px solid #e2e8f0;
  }

  .tab-button {
    padding: 1rem 1.5rem;
    border: none;
    background: transparent;
    cursor: pointer;
    font-weight: 600;
    color: #64748b;
    border-bottom: 3px solid transparent;
    transition: all 0.3s ease;
  }

  .tab-button.active {
    color: var(--product-primary);
    border-bottom-color: var(--product-primary);
  }

  .tab-content {
    display: none;
    padding: 2rem 0;
    animation: fadeIn 0.5s ease;
  }

  .tab-content.active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Trust Signals */
  .trust-signals {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin: 2rem 0;
    padding: 2rem;
    background: #f8fafc;
    border-radius: 20px;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: #4a5568;
  }

  .trust-icon {
    width: 24px;
    height: 24px;
    color: var(--product-accent);
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .product-main {
      flex-direction: column;
      min-height: auto;
    }
    
    .product-gallery {
      height: 60vh;
      min-height: 400px;
    }
    
    .product-info {
      padding: 2rem;
    }
    
    .product-title {
      font-size: 2rem;
    }
    
    .thumbnail-gallery {
      position: static;
      transform: none;
      flex-direction: row;
      justify-content: center;
      margin-top: 2rem;
    }
    
    .floating-price {
      position: static;
      margin-top: 2rem;
      width: fit-content;
    }
  }

  @media (max-width: 768px) {
    .product-features {
      grid-template-columns: 1fr;
    }
    
    .purchase-section {
      flex-direction: column;
      align-items: stretch;
    }
    
    .special-features {
      flex-direction: column;
    }
    
    .tab-buttons {
      overflow-x: auto;
      white-space: nowrap;
    }
  }

  /* Background Animation */
  .product-gallery::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 80%, rgba(14, 165, 233, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, rgba(245, 158, 11, 0.1) 0%, transparent 50%);
    animation: bgMove 15s ease-in-out infinite;
  }

  @keyframes bgMove {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(-20px, 20px) rotate(1deg); }
    66% { transform: translate(20px, -10px) rotate(-1deg); }
  }

  /* Loading States */
  .loading {
    opacity: 0.7;
    pointer-events: none;
  }

  .loading .add-to-cart-btn {
    background: #94a3b8;
    cursor: not-allowed;
  }

  .loading .add-to-cart-btn::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    animation: loading 1.5s infinite;
  }

  @keyframes loading {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
</style>

<div class="product-creative-{{ section.id }}">
  <div class="product-main">
    <!-- Product Gallery -->
    <div class="product-gallery">
      <div class="main-image-container">
        {% if product.featured_media %}
          <img src="{{ product.featured_media | image_url: width: 800 }}" 
               alt="{{ product.title }}" 
               class="main-image"
               id="main-product-image">
        {% endif %}
        
        {% if product.compare_at_price > product.price %}
          <div class="floating-badge">
            {{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}% Off
          </div>
        {% elsif product.tags contains 'new' %}
          <div class="floating-badge">New Arrival</div>
        {% elsif product.tags contains 'bestseller' %}
          <div class="floating-badge">Best Seller</div>
        {% endif %}
        
        <div class="floating-price">
          <div class="price">{{ product.price | money }}</div>
          {% if product.compare_at_price > product.price %}
            <div class="compare-price">{{ product.compare_at_price | money }}</div>
          {% endif %}
        </div>
      </div>
      
      {% if product.media.size > 1 %}
        <div class="thumbnail-gallery">
          {% for media in product.media limit: 5 %}
            <div class="thumbnail {% if forloop.first %}active{% endif %}" 
                 data-image="{{ media | image_url: width: 800 }}">
              <img src="{{ media | image_url: width: 100 }}" alt="{{ product.title }}">
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <!-- Product Information -->
    <div class="product-info">
      {% if product.vendor != blank %}
        <div class="product-vendor">{{ product.vendor }}</div>
      {% endif %}
      
      <h1 class="product-title">{{ product.title }}</h1>
      
      {% if product.description != blank %}
        <div class="product-description">
          {{ product.description | strip_html | truncate: 200 }}
        </div>
      {% endif %}

      <!-- Product Features -->
      <div class="product-features">
        <div class="feature-item">
          <div class="feature-icon">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <span>Premium Quality</span>
        </div>
        
        <div class="feature-item">
          <div class="feature-icon">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span>Fast Delivery</span>
        </div>
        
        <div class="feature-item">
          <div class="feature-icon">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span>2 Year Warranty</span>
        </div>
        
        <div class="feature-item">
          <div class="feature-icon">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <span>Customer Loved</span>
        </div>
      </div>

      <!-- Product Form -->
      <form class="product-form" action="/cart/add" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        
        {% unless product.has_only_default_variant %}
          {% for option in product.options_with_values %}
            <div class="option-group">
              <label class="option-label">{{ option.name }}</label>
              <div class="option-values">
                {% for value in option.values %}
                  <label class="option-value {% if option.name == 'Color' %}color{% endif %} {% if forloop.first %}selected{% endif %}"
                         style="{% if option.name == 'Color' %}--color: {{ value | downcase }}{% endif %}">
                    <input type="radio" 
                           name="options[{{ option.name }}]" 
                           value="{{ value }}" 
                           {% if forloop.first %}checked{% endif %}
                           style="display: none;">
                    {% unless option.name == 'Color' %}{{ value }}{% endunless %}
                  </label>
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        {% endunless %}

        <!-- Purchase Section -->
        <div class="purchase-section">
          <div class="quantity-selector">
            <button type="button" class="quantity-btn minus">−</button>
            <input type="number" name="quantity" value="1" min="1" class="quantity-input">
            <button type="button" class="quantity-btn plus">+</button>
          </div>
          
          <button type="submit" class="add-to-cart-btn">
            <span>Add to Cart - {{ product.price | money }}</span>
          </button>
        </div>
      </form>

      <!-- Special Features -->
      <div class="special-features">
        <button class="special-btn" data-feature="360">
          <svg class="special-btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          360° View
        </button>
        
        <button class="special-btn" data-feature="ar">
          <svg class="special-btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
          AR Preview
        </button>
        
        <button class="special-btn" data-feature="size">
          <svg class="special-btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2M9 3h10a2 2 0 012 2v12a4 4 0 01-4 4H9"></path>
          </svg>
          Size Guide
        </button>
      </div>

      <!-- Trust Signals -->
      <div class="trust-signals">
        <div class="trust-item">
          <svg class="trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          <span>Secure Payment</span>
        </div>
        
        <div class="trust-item">
          <svg class="trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h1.586a1 1 0 01.707.293l1.414 1.414a1 1 0 00.707.293H15a2 2 0 012 2v0M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m0 0V6a2 2 0 00-2-2H9.414a1 1 0 00-.707.293L7.293 5.707A1 1 0 006.586 6H5a2 2 0 00-2 2v0"></path>
          </svg>
          <span>Free Returns</span>
        </div>
        
        <div class="trust-item">
          <svg class="trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <span>Lightning Fast Shipping</span>
        </div>
        
        <div class="trust-item">
          <svg class="trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 000 19.5 9.75 9.75 0 000-19.5z"></path>
          </svg>
          <span>24/7 Support</span>
        </div>
      </div>

      <!-- Product Tabs -->
      <div class="product-tabs">
        <div class="tab-buttons">
          <button class="tab-button active" data-tab="description">Description</button>
          <button class="tab-button" data-tab="specifications">Specifications</button>
          <button class="tab-button" data-tab="reviews">Reviews</button>
          <button class="tab-button" data-tab="shipping">Shipping</button>
        </div>
        
        <div class="tab-content active" id="tab-description">
          {{ product.description }}
        </div>
        
        <div class="tab-content" id="tab-specifications">
          <ul class="space-y-2">
            <li><strong>Material:</strong> Premium Cotton Blend</li>
            <li><strong>Care:</strong> Machine Washable</li>
            <li><strong>Origin:</strong> Made in USA</li>
            <li><strong>Certification:</strong> OEKO-TEX Standard 100</li>
          </ul>
        </div>
        
        <div class="tab-content" id="tab-reviews">
          <div class="text-center py-8">
            <h3 class="text-xl font-bold mb-4">Customer Reviews</h3>
            <p class="text-gray-600">No reviews yet. Be the first to review this product!</p>
          </div>
        </div>
        
        <div class="tab-content" id="tab-shipping">
          <ul class="space-y-2">
            <li><strong>Standard Shipping:</strong> 3-5 business days</li>
            <li><strong>Express Shipping:</strong> 1-2 business days</li>
            <li><strong>International:</strong> 7-14 business days</li>
            <li><strong>Free Shipping:</strong> Orders over $100</li>
