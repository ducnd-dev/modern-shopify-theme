{% comment %}
  Creative Hero Section
  Unique layouts with geometric shapes, split screens, and creative typography
{% endcomment %}

<style>
  .hero-creative-{{ section.id }} {
    --hero-primary: {{ section.settings.primary_color | default: '#0ea5e9' }};
    --hero-secondary: {{ section.settings.secondary_color | default: '#8b5cf6' }};
    --hero-accent: {{ section.settings.accent_color | default: '#f59e0b' }};
  }

  .geometric-bg {
    background: linear-gradient(135deg, var(--hero-primary) 0%, var(--hero-secondary) 100%);
    position: relative;
    overflow: hidden;
  }

  .geometric-bg::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 100%;
    height: 200%;
    background: rgba(255, 255, 255, 0.1);
    transform: rotate(15deg);
    z-index: 1;
  }

  .geometric-bg::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -10%;
    width: 60%;
    height: 100%;
    background: rgba(255, 255, 255, 0.05);
    transform: rotate(-20deg);
    border-radius: 50% 50% 0 0;
    z-index: 1;
  }

  .floating-elements {
    position: absolute;
    inset: 0;
    z-index: 2;
  }

  .floating-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    animation: float 6s ease-in-out infinite;
  }

  .floating-circle:nth-child(1) {
    width: 100px;
    height: 100px;
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .floating-circle:nth-child(2) {
    width: 60px;
    height: 60px;
    top: 20%;
    right: 15%;
    animation-delay: 2s;
  }

  .floating-circle:nth-child(3) {
    width: 80px;
    height: 80px;
    bottom: 15%;
    left: 20%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    25% { transform: translateY(-20px) rotate(5deg); }
    50% { transform: translateY(-10px) rotate(-5deg); }
    75% { transform: translateY(-15px) rotate(3deg); }
  }

  .text-gradient {
    background: linear-gradient(135deg, var(--hero-primary), var(--hero-secondary), var(--hero-accent));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradientShift 4s ease infinite;
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .glitch-text {
    position: relative;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .glitch-text::before {
    animation: glitch-1 2s infinite;
    color: var(--hero-primary);
    z-index: -1;
  }

  .glitch-text::after {
    animation: glitch-2 2s infinite;
    color: var(--hero-secondary);
    z-index: -2;
  }

  @keyframes glitch-1 {
    0%, 90%, 100% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
  }

  @keyframes glitch-2 {
    0%, 90%, 100% { transform: translate(0); }
    10% { transform: translate(-1px, 1px); }
    30% { transform: translate(1px, -1px); }
    50% { transform: translate(-1px, -1px); }
    70% { transform: translate(1px, 1px); }
  }

  .neon-border {
    border: 2px solid var(--hero-accent);
    box-shadow: 
      0 0 10px var(--hero-accent),
      inset 0 0 10px rgba(245, 158, 11, 0.1);
    animation: neonPulse 2s ease-in-out infinite alternate;
  }

  @keyframes neonPulse {
    from {
      box-shadow: 
        0 0 10px var(--hero-accent),
        inset 0 0 10px rgba(245, 158, 11, 0.1);
    }
    to {
      box-shadow: 
        0 0 20px var(--hero-accent),
        0 0 30px var(--hero-accent),
        inset 0 0 20px rgba(245, 158, 11, 0.2);
    }
  }
</style>

<section class="hero-creative-{{ section.id }} relative min-h-screen flex items-center">
  {% case section.settings.layout_style %}
    {% when 'geometric' %}
      <div class="geometric-bg absolute inset-0">
        <div class="floating-elements">
          <div class="floating-circle"></div>
          <div class="floating-circle"></div>
          <div class="floating-circle"></div>
        </div>
      </div>
    
    {% when 'split_screen' %}
      <div class="absolute inset-0 grid lg:grid-cols-2">
        <div class="bg-gradient-to-br from-{{ section.settings.primary_color | default: 'blue-600' }} to-{{ section.settings.secondary_color | default: 'purple-600' }}"></div>
        <div class="bg-gradient-to-bl from-{{ section.settings.accent_color | default: 'yellow-400' }} to-{{ section.settings.primary_color | default: 'blue-600' }}"></div>
      </div>
    
    {% when 'minimal' %}
      <div class="absolute inset-0 bg-gradient-to-r from-white via-neutral-50 to-primary-50"></div>
  {% endcase %}

  <div class="container relative z-10 mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="{% if section.settings.layout_style == 'split_screen' %}text-white{% else %}text-neutral-900{% endif %} space-y-8">
        {% if section.settings.eyebrow_text != blank %}
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20">
            <div class="w-2 h-2 bg-{{ section.settings.accent_color | default: 'yellow-400' }} rounded-full animate-pulse"></div>
            <span class="text-sm font-medium uppercase tracking-wider">{{ section.settings.eyebrow_text }}</span>
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          {% case section.settings.text_style %}
            {% when 'gradient' %}
              <h1 class="text-5xl lg:text-7xl xl:text-8xl font-black leading-none">
                <span class="text-gradient">{{ section.settings.heading }}</span>
              </h1>
            {% when 'glitch' %}
              <h1 class="text-5xl lg:text-7xl xl:text-8xl glitch-text" data-text="{{ section.settings.heading }}">
                {{ section.settings.heading }}
              </h1>
            {% else %}
              <h1 class="text-5xl lg:text-7xl xl:text-8xl font-black leading-none {% if section.settings.layout_style == 'split_screen' %}text-white{% else %}text-neutral-900{% endif %}">
                {{ section.settings.heading }}
              </h1>
          {% endcase %}
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="text-xl lg:text-2xl {% if section.settings.layout_style == 'split_screen' %}text-white/80{% else %}text-neutral-600{% endif %} max-w-2xl leading-relaxed">
            {{ section.settings.description }}
          </p>
        {% endif %}

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          {% if section.settings.primary_button_text != blank %}
            <a href="{{ section.settings.primary_button_url | default: '#' }}" 
               class="group inline-flex items-center justify-center px-8 py-4 bg-{{ section.settings.accent_color | default: 'yellow-400' }} text-black font-bold rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-{{ section.settings.accent_color | default: 'yellow-400' }}/50 {% if section.settings.button_style == 'neon' %}neon-border{% endif %}">
              <span>{{ section.settings.primary_button_text }}</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
          {% endif %}

          {% if section.settings.secondary_button_text != blank %}
            <a href="{{ section.settings.secondary_button_url | default: '#' }}" 
               class="inline-flex items-center justify-center px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/30 {% if section.settings.layout_style == 'split_screen' %}text-white{% else %}text-neutral-900{% endif %} font-semibold rounded-xl transition-all duration-300 hover:bg-white/20">
              {{ section.settings.secondary_button_text }}
            </a>
          {% endif %}
        </div>

        <!-- Stats/Features -->
        {% if section.blocks.size > 0 %}
          <div class="grid grid-cols-3 gap-6 pt-8 border-t border-white/20">
            {% for block in section.blocks %}
              <div class="text-center">
                <div class="text-2xl lg:text-3xl font-bold {% if section.settings.layout_style == 'split_screen' %}text-white{% else %}text-neutral-900{% endif %}">
                  {{ block.settings.stat_number | default: '100+' }}
                </div>
                <div class="text-sm {% if section.settings.layout_style == 'split_screen' %}text-white/70{% else %}text-neutral-600{% endif %}">
                  {{ block.settings.stat_label | default: 'Happy Customers' }}
                </div>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Visual Content -->
      <div class="relative">
        {% if section.settings.hero_image != blank %}
          <div class="relative overflow-hidden rounded-3xl">
            <img 
              src="{{ section.settings.hero_image | image_url: width: 800 }}" 
              alt="{{ section.settings.heading | escape }}"
              class="w-full h-[600px] object-cover transform hover:scale-110 transition-transform duration-700"
              loading="eager"
            >
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
          </div>
        {% else %}
          <!-- Placeholder with creative graphics -->
          <div class="w-full h-[600px] bg-gradient-to-br from-primary-100 to-primary-200 rounded-3xl flex items-center justify-center relative overflow-hidden">
            <div class="absolute inset-0 opacity-10">
              {% for i in (1..20) %}
                <div class="absolute w-4 h-4 bg-primary-600 rounded-full" style="top: {{ i | times: 5 }}%; left: {{ i | times: 4 }}%; animation-delay: {{ i | times: 0.1 }}s;" data-animate="float"></div>
              {% endfor %}
            </div>
            <div class="text-center z-10">
              <svg class="w-24 h-24 text-primary-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="text-primary-600 font-medium">Add your hero image</p>
            </div>
          </div>
        {% endif %}

        <!-- Floating action elements -->
        {% if section.settings.show_floating_elements %}
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-{{ section.settings.accent_color | default: 'yellow-400' }} rounded-full flex items-center justify-center animate-bounce">
            <span class="text-sm font-bold text-black">NEW</span>
          </div>
          <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  {% if section.settings.show_scroll_indicator %}
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 {% if section.settings.layout_style == 'split_screen' %}text-white{% else %}text-neutral-600{% endif %} animate-bounce">
      <div class="flex flex-col items-center gap-2">
        <span class="text-sm font-medium">Scroll</span>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  {% endif %}
</section>

