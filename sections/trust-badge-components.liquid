{% comment %}
  Trust Badge Components
  Security badges, shipping guarantees, payment methods, and certification displays
{% endcomment %}

<div class="trust-badges-section py-8 bg-{{ section.settings.background_color }}" data-trust-badges>
  <div class="container mx-auto px-4">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100 mb-2">
          {{ section.settings.heading }}
        </h3>
        {% if section.settings.subheading != blank %}
          <p class="text-neutral-600 dark:text-neutral-400">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="grid gap-8">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'security_badges' %}
            <div 
              class="security-badges-group"
              {{ block.shopify_attributes }}
            >
              <div class="flex flex-wrap items-center justify-center gap-6">
                {% if block.settings.show_ssl_badge %}
                  <div class="trust-badge group cursor-pointer" data-tooltip="SSL Encrypted & Secure">
                    <div class="flex items-center gap-3 bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 px-4 py-3 hover:shadow-md transition-all duration-300">
                      <div class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                      </div>
                      <div>
                        <p class="font-semibold text-neutral-900 dark:text-neutral-100 text-sm">SSL Secured</p>
                        <p class="text-xs text-neutral-600 dark:text-neutral-400">256-bit Encryption</p>
                      </div>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_privacy_badge %}
                  <div class="trust-badge group cursor-pointer" data-tooltip="Your Privacy Protected">
                    <div class="flex items-center gap-3 bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 px-4 py-3 hover:shadow-md transition-all duration-300">
                      <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                        </svg>
                      </div>
                      <div>
                        <p class="font-semibold text-neutral-900 dark:text-neutral-100 text-sm">Privacy Protected</p>
                        <p class="text-xs text-neutral-600 dark:text-neutral-400">Data Secured</p>
                      </div>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_verified_badge %}
                  <div class="trust-badge group cursor-pointer" data-tooltip="Verified Secure Store">
                    <div class="flex items-center gap-3 bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 px-4 py-3 hover:shadow-md transition-all duration-300">
                      <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </div>
                      <div>
                        <p class="font-semibold text-neutral-900 dark:text-neutral-100 text-sm">Verified Store</p>
                        <p class="text-xs text-neutral-600 dark:text-neutral-400">Trusted Merchant</p>
                      </div>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_gdpr_badge %}
                  <div class="trust-badge group cursor-pointer" data-tooltip="GDPR Compliant">
                    <div class="flex items-center gap-3 bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 px-4 py-3 hover:shadow-md transition-all duration-300">
                      <div class="w-10 h-10 bg-orange-100 dark:bg-orange-900 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                      </div>
                      <div>
                        <p class="font-semibold text-neutral-900 dark:text-neutral-100 text-sm">GDPR Compliant</p>
                        <p class="text-xs text-neutral-600 dark:text-neutral-400">EU Standards</p>
                      </div>
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>

          {% when 'payment_methods' %}
            <div 
              class="payment-methods-group"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.title != blank %}
                <h4 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 text-center mb-6">
                  {{ block.settings.title }}
                </h4>
              {% endif %}

              <div class="flex flex-wrap items-center justify-center gap-4">
                {% if block.settings.show_visa %}
                  <div class="payment-badge bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-3 hover:shadow-md transition-shadow">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/4/41/Visa_Logo.png" alt="Visa" class="h-6 w-auto">
                  </div>
                {% endif %}

                {% if block.settings.show_mastercard %}
                  <div class="payment-badge bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-3 hover:shadow-md transition-shadow">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" alt="Mastercard" class="h-6 w-auto">
                  </div>
                {% endif %}

                {% if block.settings.show_amex %}
                  <div class="payment-badge bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-3 hover:shadow-md transition-shadow">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/f/fa/American_Express_logo_%282018%29.svg" alt="American Express" class="h-6 w-auto">
                  </div>
                {% endif %}

                {% if block.settings.show_paypal %}
                  <div class="payment-badge bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-3 hover:shadow-md transition-shadow">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/PayPal.svg" alt="PayPal" class="h-6 w-auto">
                  </div>
                {% endif %}

                {% if block.settings.show_apple_pay %}
                  <div class="payment-badge bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-3 hover:shadow-md transition-shadow">
                    <div class="flex items-center gap-2">
                      <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18.71 19.5C17.88 20.74 17 21.95 15.66 21.97C14.32 21.99 13.89 21.18 12.37 21.18C10.84 21.18 10.37 21.95 9.09997 21.99C7.78997 22.03 6.79997 20.68 5.95997 19.47C4.24997 17 2.93997 12.45 4.69997 9.39C5.56997 7.87 7.13997 6.91 8.85997 6.88C10.15 6.86 11.38 7.75 12.1 7.75C12.81 7.75 14.28 6.66 15.92 6.84C16.61 6.87 18.39 7.1 19.56 8.82C19.47 8.88 17.39 10.1 17.41 12.63C17.44 15.65 20.06 16.66 20.09 16.67C20.06 16.74 19.67 18.11 18.71 19.5ZM13 3.5C13.73 2.67 14.94 2.04 15.94 2C16.07 3.17 15.6 4.35 14.9 5.19C14.21 6.04 13.07 6.7 11.95 6.61C11.8 5.46 12.36 4.26 13 3.5Z"/>
                      </svg>
                      <span class="text-sm font-medium text-neutral-900 dark:text-neutral-100">Pay</span>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_google_pay %}
                  <div class="payment-badge bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-3 hover:shadow-md transition-shadow">
                    <div class="flex items-center gap-2">
                      <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M22.56 12.25C22.56 11.47 22.49 10.72 22.36 10H12V14.26H17.92C17.66 15.53 16.98 16.62 15.98 17.35V20.09H19.42C21.31 18.36 22.56 15.56 22.56 12.25Z" fill="#4285F4"/>
                        <path d="M12 22.5C15.24 22.5 17.95 21.46 19.42 20.09L15.98 17.35C14.98 18.01 13.66 18.42 12 18.42C8.87 18.42 6.24 16.67 5.33 14.09H1.78V16.92C3.24 19.82 7.31 22.5 12 22.5Z" fill="#34A853"/>
                        <path d="M5.33 14.09C5.1 13.43 4.97 12.72 4.97 12S5.1 10.57 5.33 9.91V7.08H1.78C1.02 8.58 0.6 10.24 0.6 12S1.02 15.42 1.78 16.92L5.33 14.09Z" fill="#FBBC04"/>
                        <path d="M12 5.58C13.86 5.58 15.45 6.25 16.68 7.42L19.72 4.38C17.95 2.72 15.24 1.5 12 1.5C7.31 1.5 3.24 4.18 1.78 7.08L5.33 9.91C6.24 7.33 8.87 5.58 12 5.58Z" fill="#EA4335"/>
                      </svg>
                      <span class="text-sm font-medium text-neutral-900 dark:text-neutral-100">Pay</span>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_shop_pay %}
                  <div class="payment-badge bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-3 hover:shadow-md transition-shadow">
                    <div class="flex items-center gap-2">
                      <div class="w-6 h-6 bg-purple-600 rounded flex items-center justify-center">
                        <span class="text-white text-xs font-bold">S</span>
                      </div>
                      <span class="text-sm font-medium text-neutral-900 dark:text-neutral-100">Shop Pay</span>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_klarna %}
                  <div class="payment-badge bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-3 hover:shadow-md transition-shadow">
                    <span class="text-sm font-bold text-pink-500">klarna</span>
                  </div>
                {% endif %}
              </div>
            </div>

          {% when 'shipping_guarantees' %}
            <div 
              class="shipping-guarantees-group"
              {{ block.shopify_attributes }}
            >
              <div class="grid md:grid-cols-3 gap-6">
                {% if block.settings.show_free_shipping %}
                  <div class="guarantee-item text-center">
                    <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-4">
                      <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                      </svg>
                    </div>
                    <h4 class="font-semibold text-neutral-900 dark:text-neutral-100 mb-2">
                      {{ block.settings.free_shipping_title | default: "Free Shipping" }}
                    </h4>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      {{ block.settings.free_shipping_description | default: "On orders over $50" }}
                    </p>
                  </div>
                {% endif %}

                {% if block.settings.show_fast_delivery %}
                  <div class="guarantee-item text-center">
                    <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
                      <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                    </div>
                    <h4 class="font-semibold text-neutral-900 dark:text-neutral-100 mb-2">
                      {{ block.settings.fast_delivery_title | default: "Fast Delivery" }}
                    </h4>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      {{ block.settings.fast_delivery_description | default: "2-3 business days" }}
                    </p>
                  </div>
                {% endif %}

                {% if block.settings.show_tracking %}
                  <div class="guarantee-item text-center">
                    <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mx-auto mb-4">
                      <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m-6 3l6-3"></path>
                      </svg>
                    </div>
                    <h4 class="font-semibold text-neutral-900 dark:text-neutral-100 mb-2">
                      {{ block.settings.tracking_title | default: "Order Tracking" }}
                    </h4>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      {{ block.settings.tracking_description | default: "Real-time updates" }}
                    </p>
                  </div>
                {% endif %}
              </div>
            </div>

          {% when 'return_policy' %}
            <div 
              class="return-policy-group bg-white dark:bg-neutral-800 rounded-xl shadow-lg border border-neutral-200 dark:border-neutral-600 p-8"
              {{ block.shopify_attributes }}
            >
              <div class="text-center">
                <div class="w-20 h-20 bg-gradient-to-br from-primary-100 to-primary-200 dark:from-primary-900 dark:to-primary-800 rounded-full flex items-center justify-center mx-auto mb-6">
                  <svg class="w-10 h-10 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                  </svg>
                </div>
                
                <h3 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
                  {{ block.settings.title | default: "30-Day Returns" }}
                </h3>
                
                <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-6 max-w-2xl mx-auto">
                  {{ block.settings.description | default: "Not satisfied? Return your purchase within 30 days for a full refund. No questions asked." }}
                </p>

                {% if block.settings.show_benefits %}
                  <div class="grid md:grid-cols-3 gap-6 mt-8">
                    <div class="benefit-item">
                      <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-3">
                        <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                      </div>
                      <h4 class="font-semibold text-neutral-900 dark:text-neutral-100 mb-1">Easy Process</h4>
                      <p class="text-sm text-neutral-600 dark:text-neutral-400">Simple online return form</p>
                    </div>

                    <div class="benefit-item">
                      <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-3">
                        <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                      </div>
                      <h4 class="font-semibold text-neutral-900 dark:text-neutral-100 mb-1">Full Refund</h4>
                      <p class="text-sm text-neutral-600 dark:text-neutral-400">100% money back guarantee</p>
                    </div>

                    <div class="benefit-item">
                      <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mx-auto mb-3">
                        <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                      </div>
                      <h4 class="font-semibold text-neutral-900 dark:text-neutral-100 mb-1">Free Returns</h4>
                      <p class="text-sm text-neutral-600 dark:text-neutral-400">We cover return shipping</p>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.cta_text != blank %}
                  <div class="mt-8">
                    <a 
                      href="{{ block.settings.cta_url | default: '/pages/returns' }}"
                      class="inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-primary-700 transition-colors"
                    >
                      {{ block.settings.cta_text }}
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                      </svg>
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>

          {% when 'certifications' %}
            <div 
              class="certifications-group"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.title != blank %}
                <h4 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 text-center mb-6">
                  {{ block.settings.title }}
                </h4>
              {% endif %}

              <div class="flex flex-wrap items-center justify-center gap-6">
                {% if block.settings.show_eco_friendly %}
                  <div class="certification-badge group cursor-pointer" data-tooltip="Eco-Friendly Products">
                    <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-4 hover:shadow-md transition-all duration-300">
                      <div class="text-center">
                        <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-2">
                          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                          </svg>
                        </div>
                        <p class="text-xs font-semibold text-neutral-900 dark:text-neutral-100">Eco-Friendly</p>
                      </div>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_organic %}
                  <div class="certification-badge group cursor-pointer" data-tooltip="Certified Organic">
                    <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-4 hover:shadow-md transition-all duration-300">
                      <div class="text-center">
                        <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-2">
                          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                          </svg>
                        </div>
                        <p class="text-xs font-semibold text-neutral-900 dark:text-neutral-100">Organic</p>
                      </div>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_cruelty_free %}
                  <div class="certification-badge group cursor-pointer" data-tooltip="Cruelty-Free Certified">
                    <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-4 hover:shadow-md transition-all duration-300">
                      <div class="text-center">
                        <div class="w-12 h-12 bg-pink-100 dark:bg-pink-900 rounded-full flex items-center justify-center mx-auto mb-2">
                          <svg class="w-6 h-6 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                          </svg>
                        </div>
                        <p class="text-xs font-semibold text-neutral-900 dark:text-neutral-100">Cruelty-Free</p>
                      </div>
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.show_quality_guarantee %}
                  <div class="certification-badge group cursor-pointer" data-tooltip="Quality Guaranteed">
                    <div class="bg-white dark:bg-neutral-800 rounded-lg shadow-sm border border-neutral-200 dark:border-neutral-600 p-4 hover:shadow-md transition-all duration-300">
                      <div class="text-center">
                        <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900 rounded-full flex items-center justify-center mx-auto mb-2">
                          <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
