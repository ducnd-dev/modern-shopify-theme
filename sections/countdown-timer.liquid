{% comment %}
  Countdown Timer Section
  Advanced countdown timer with multiple layouts, animations, and promotional content
{% endcomment %}

<div class="countdown-section py-16 bg-{{ section.settings.background_color }}">
  <div class="container mx-auto px-4">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="text-center mb-12">
        {% if section.settings.heading != blank %}
          <h2 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="text-xl text-neutral-600 dark:text-neutral-400 max-w-3xl mx-auto">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="max-w-6xl mx-auto">
      {% if section.settings.layout == 'card' %}
        <!-- Card Layout -->
        <div class="bg-white dark:bg-neutral-800 rounded-3xl shadow-2xl border border-neutral-200 dark:border-neutral-700 overflow-hidden">
          {% if section.settings.background_image %}
            <div class="relative h-64 md:h-80">
              <img 
                src="{{ section.settings.background_image | image_url: width: 1200 }}" 
                alt="{{ section.settings.heading }}"
                class="w-full h-full object-cover"
                loading="lazy"
              >
              <div class="absolute inset-0 bg-black bg-opacity-40"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center text-white">
                  <h3 class="text-2xl md:text-3xl font-bold mb-2">{{ section.settings.promo_text | default: 'Limited Time Offer!' }}</h3>
                  {% if section.settings.discount_text != blank %}
                    <p class="text-lg md:text-xl">{{ section.settings.discount_text }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}

          <div class="p-8 md:p-12 text-center">
            <!-- Countdown Timer -->
            <div 
              class="countdown-timer grid grid-cols-4 gap-4 md:gap-8 mb-8"
              data-countdown-date="{{ section.settings.countdown_date }}"
              data-timezone="{{ section.settings.timezone | default: 'UTC' }}"
            >
              <div class="countdown-item">
                <div class="countdown-number text-3xl md:text-5xl font-bold text-primary-600 dark:text-primary-400 mb-2" data-days>00</div>
                <div class="countdown-label text-sm md:text-base text-neutral-600 dark:text-neutral-400 uppercase tracking-wide">Days</div>
              </div>
              <div class="countdown-item">
                <div class="countdown-number text-3xl md:text-5xl font-bold text-primary-600 dark:text-primary-400 mb-2" data-hours>00</div>
                <div class="countdown-label text-sm md:text-base text-neutral-600 dark:text-neutral-400 uppercase tracking-wide">Hours</div>
              </div>
              <div class="countdown-item">
                <div class="countdown-number text-3xl md:text-5xl font-bold text-primary-600 dark:text-primary-400 mb-2" data-minutes>00</div>
                <div class="countdown-label text-sm md:text-base text-neutral-600 dark:text-neutral-400 uppercase tracking-wide">Minutes</div>
              </div>
              <div class="countdown-item">
                <div class="countdown-number text-3xl md:text-5xl font-bold text-primary-600 dark:text-primary-400 mb-2" data-seconds>00</div>
                <div class="countdown-label text-sm md:text-base text-neutral-600 dark:text-neutral-400 uppercase tracking-wide">Seconds</div>
              </div>
            </div>

            <!-- Call to Action -->
            {% if section.settings.button_text != blank %}
              <div class="mb-6">
                <a 
                  href="{{ section.settings.button_url | default: '#' }}"
                  class="inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-primary-700 transition-all duration-300 transform hover:scale-105 shadow-lg countdown-btn"
                  {% if section.settings.button_url == blank %}onclick="event.preventDefault();"{% endif %}
                >
                  {{ section.settings.button_text }}
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </a>
              </div>
            {% endif %}

            <!-- Additional Info -->
            {% if section.settings.show_urgency_text %}
              <p class="text-sm text-red-600 dark:text-red-400 font-medium">
                âš¡ {{ section.settings.urgency_text | default: 'Hurry! Offer expires soon!' }}
              </p>
            {% endif %}
          </div>
        </div>

      {% elsif section.settings.layout == 'banner' %}
        <!-- Banner Layout -->
        <div class="relative overflow-hidden rounded-2xl">
          {% if section.settings.background_image %}
            <div class="absolute inset-0">
              <img 
                src="{{ section.settings.background_image | image_url: width: 1200 }}" 
                alt="{{ section.settings.heading }}"
                class="w-full h-full object-cover"
                loading="lazy"
              >
              <div class="absolute inset-0 bg-black bg-opacity-50"></div>
            </div>
          {% else %}
            <div class="absolute inset-0 bg-gradient-to-r from-primary-600 to-primary-800"></div>
          {% endif %}

          <div class="relative py-16 md:py-24 text-center text-white">
            <div class="mb-8">
              <h3 class="text-3xl md:text-4xl font-bold mb-4">{{ section.settings.promo_text | default: 'Limited Time Offer!' }}</h3>
              {% if section.settings.discount_text != blank %}
                <p class="text-xl md:text-2xl text-yellow-300">{{ section.settings.discount_text }}</p>
              {% endif %}
            </div>

            <!-- Countdown Timer -->
            <div 
              class="countdown-timer flex justify-center items-center gap-4 md:gap-8 mb-8"
              data-countdown-date="{{ section.settings.countdown_date }}"
              data-timezone="{{ section.settings.timezone | default: 'UTC' }}"
            >
              <div class="countdown-item text-center">
                <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4 mb-2">
                  <div class="countdown-number text-3xl md:text-4xl font-bold" data-days>00</div>
                </div>
                <div class="countdown-label text-sm uppercase tracking-wide">Days</div>
              </div>
              <div class="text-2xl font-bold">:</div>
              <div class="countdown-item text-center">
                <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4 mb-2">
                  <div class="countdown-number text-3xl md:text-4xl font-bold" data-hours>00</div>
                </div>
                <div class="countdown-label text-sm uppercase tracking-wide">Hours</div>
              </div>
              <div class="text-2xl font-bold">:</div>
              <div class="countdown-item text-center">
                <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4 mb-2">
                  <div class="countdown-number text-3xl md:text-4xl font-bold" data-minutes>00</div>
                </div>
                <div class="countdown-label text-sm uppercase tracking-wide">Minutes</div>
              </div>
              <div class="text-2xl font-bold">:</div>
              <div class="countdown-item text-center">
                <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4 mb-2">
                  <div class="countdown-number text-3xl md:text-4xl font-bold" data-seconds>00</div>
                </div>
                <div class="countdown-label text-sm uppercase tracking-wide">Seconds</div>
              </div>
            </div>

            <!-- Call to Action -->
            {% if section.settings.button_text != blank %}
              <a 
                href="{{ section.settings.button_url | default: '#' }}"
                class="inline-flex items-center gap-2 bg-white text-primary-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-neutral-100 transition-all duration-300 transform hover:scale-105 shadow-lg countdown-btn"
                {% if section.settings.button_url == blank %}onclick="event.preventDefault();"{% endif %}
              >
                {{ section.settings.button_text }}
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>

      {% else %}
        <!-- Inline Layout -->
        <div class="text-center">
          {% if section.settings.promo_text != blank %}
            <h3 class="text-2xl md:text-3xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
              {{ section.settings.promo_text }}
            </h3>
          {% endif %}
          {% if section.settings.discount_text != blank %}
            <p class="text-lg md:text-xl text-primary-600 dark:text-primary-400 mb-8">
              {{ section.settings.discount_text }}
            </p>
          {% endif %}

          <!-- Countdown Timer -->
          <div 
            class="countdown-timer inline-flex items-center gap-2 md:gap-4 bg-neutral-100 dark:bg-neutral-800 rounded-full px-6 py-4 mb-8"
            data-countdown-date="{{ section.settings.countdown_date }}"
            data-timezone="{{ section.settings.timezone | default: 'UTC' }}"
          >
            <div class="countdown-item flex items-center gap-1">
              <div class="countdown-number text-xl md:text-2xl font-bold text-primary-600 dark:text-primary-400" data-days>00</div>
              <div class="countdown-label text-sm text-neutral-600 dark:text-neutral-400">d</div>
            </div>
            <div class="text-neutral-400">:</div>
            <div class="countdown-item flex items-center gap-1">
              <div class="countdown-number text-xl md:text-2xl font-bold text-primary-600 dark:text-primary-400" data-hours>00</div>
              <div class="countdown-label text-sm text-neutral-600 dark:text-neutral-400">h</div>
            </div>
            <div class="text-neutral-400">:</div>
            <div class="countdown-item flex items-center gap-1">
              <div class="countdown-number text-xl md:text-2xl font-bold text-primary-600 dark:text-primary-400" data-minutes>00</div>
              <div class="countdown-label text-sm text-neutral-600 dark:text-neutral-400">m</div>
            </div>
            <div class="text-neutral-400">:</div>
            <div class="countdown-item flex items-center gap-1">
              <div class="countdown-number text-xl md:text-2xl font-bold text-primary-600 dark:text-primary-400" data-seconds>00</div>
              <div class="countdown-label text-sm text-neutral-600 dark:text-neutral-400">s</div>
            </div>
          </div>

          <!-- Call to Action -->
          {% if section.settings.button_text != blank %}
            <div>
              <a 
                href="{{ section.settings.button_url | default: '#' }}"
                class="inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-primary-700 transition-all duration-300 countdown-btn"
                {% if section.settings.button_url == blank %}onclick="event.preventDefault();"{% endif %}
              >
                {{ section.settings.button_text }}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
            </div>
          {% endif %}
        </div>
      {% endif %}

      <!-- Expired State -->
      <div class="countdown-expired hidden text-center py-8">
        <div class="bg-red-100 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-6">
          <h3 class="text-2xl font-bold text-red-800 dark:text-red-300 mb-2">
            {{ section.settings.expired_title | default: 'Offer Expired!' }}
          </h3>
          <p class="text-red-600 dark:text-red-400">
            {{ section.settings.expired_message | default: 'This promotion has ended. Check back for new offers!' }}
          </p>
          {% if section.settings.fallback_button_text != blank %}
            <div class="mt-4">
              <a 
                href="{{ section.settings.fallback_button_url | default: '#' }}"
                class="inline-flex items-center gap-2 bg-red-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-red-700 transition-all duration-300"
                {% if section.settings.fallback_button_url == blank %}onclick="event.preventDefault();"{% endif %}
              >
                {{ section.settings.fallback_button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const countdownTimers = document.querySelectorAll('.countdown-timer');
    
    countdownTimers.forEach(timer => {
      const countdownDate = timer.getAttribute('data-countdown-date');
      const timezone = timer.getAttribute('data-timezone') || 'UTC';
      
      if (!countdownDate) return;
      
      const daysEl = timer.querySelector('[data-days]');
      const hoursEl = timer.querySelector('[data-hours]');
      const minutesEl = timer.querySelector('[data-minutes]');
      const secondsEl = timer.querySelector('[data-seconds]');
      const expiredEl = timer.closest('.countdown-section').querySelector('.countdown-expired');
      const countdownContent = timer.closest('.max-w-6xl');
      
      function updateCountdown() {
        const now = new Date().getTime();
        const targetDate = new Date(countdownDate).getTime();
        const distance = targetDate - now;
        
        if (distance < 0) {
          // Timer expired
          if (countdownContent) countdownContent.style.display = 'none';
          if (expiredEl) expiredEl.classList.remove('hidden');
          return;
        }
        
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);
        
        if (daysEl) {
          const newDays = days.toString().padStart(2, '0');
          if (daysEl.textContent !== newDays) {
            daysEl.style.animation = 'countdown-flip 0.5s ease-in-out';
            setTimeout(() => {
              daysEl.textContent = newDays;
              daysEl.style.animation = '';
            }, 250);
          }
        }
        
        if (hoursEl) {
          const newHours = hours.toString().padStart(2, '0');
          if (hoursEl.textContent !== newHours) {
            hoursEl.style.animation = 'countdown-flip 0.5s ease-in-out';
            setTimeout(() => {
              hoursEl.textContent = newHours;
              hoursEl.style.animation = '';
            }, 250);
          }
        }
        
        if (minutesEl) {
          const newMinutes = minutes.toString().padStart(2, '0');
          if (minutesEl.textContent !== newMinutes) {
            minutesEl.style.animation = 'countdown-flip 0.5s ease-in-out';
            setTimeout(() => {
              minutesEl.textContent = newMinutes;
              minutesEl.style.animation = '';
            }, 250);
          }
        }
        
        if (secondsEl) {
          const newSeconds = seconds.toString().padStart(2, '0');
          if (secondsEl.textContent !== newSeconds) {
            secondsEl.style.animation = 'countdown-flip 0.5s ease-in-out';
            setTimeout(() => {
              secondsEl.textContent = newSeconds;
              secondsEl.style.animation = '';
            }, 250);
          }
        }
        
        // Add urgency styling when time is running low
        if (distance < 3600000) { // Less than 1 hour
          timer.classList.add('countdown-urgent');
        }
      }
      
      // Update immediately and then every second
      updateCountdown();
      setInterval(updateCountdown, 1000);
    });
    
    // Add pulsing animation to CTA buttons
    const countdownBtns = document.querySelectorAll('.countdown-btn');
    countdownBtns.forEach(btn => {
      setInterval(() => {
        btn.style.animation = 'pulse 2s infinite';
      }, 5000);
    });
  });
</script>

<style>
  @keyframes countdown-flip {
    0% { transform: rotateY(0deg); }
    50% { transform: rotateY(-90deg); }
    100% { transform: rotateY(0deg); }
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  .countdown-urgent .countdown-number {
    color: #dc2626 !important;
    animation: pulse 1s infinite;
  }
  
  .countdown-item {
    will-change: transform;
  }
</style>

