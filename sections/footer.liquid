{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer bg-neutral-900 dark:bg-neutral-950 text-neutral-100 section-{{ section.id }}-padding">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div class="space-y-6">
        <!-- Logo -->
        <div>
          {%- if settings.footer_logo != blank -%}
            <img
              src="{{ settings.footer_logo | image_url: width: 200 }}"
              alt="{{ shop.name }}"
              class="h-10 w-auto"
              width="{{ settings.footer_logo.width }}"
              height="{{ settings.footer_logo.height }}"
            >
          {%- else -%}
            <span class="text-2xl font-bold font-display">{{ shop.name }}</span>
          {%- endif -%}
        </div>

        <!-- Description -->
        {%- if section.settings.description != blank -%}
          <p class="text-neutral-300 leading-relaxed">
            {{ section.settings.description }}
          </p>
        {%- endif -%}

        <!-- Social Media -->
        {%- if section.settings.show_social -%}
          <div class="space-y-4">
            <h3 class="text-sm font-semibold text-neutral-100 uppercase tracking-wider">Follow Us</h3>
            <div class="flex space-x-4">
              {%- if settings.social_facebook_link != blank -%}
                <a
                  href="{{ settings.social_facebook_link }}"
                  class="text-neutral-400 hover:text-primary-400 transition-colors duration-300"
                  aria-label="Facebook"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if settings.social_instagram_link != blank -%}
                <a
                  href="{{ settings.social_instagram_link }}"
                  class="text-neutral-400 hover:text-primary-400 transition-colors duration-300"
                  aria-label="Instagram"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.348-1.051-2.348-2.348s1.051-2.348 2.348-2.348 2.348 1.051 2.348 2.348-1.051 2.348-2.348 2.348zm7.138 0c-1.297 0-2.348-1.051-2.348-2.348s1.051-2.348 2.348-2.348 2.348 1.051 2.348 2.348-1.051 2.348-2.348 2.348z"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if settings.social_twitter_link != blank -%}
                <a
                  href="{{ settings.social_twitter_link }}"
                  class="text-neutral-400 hover:text-primary-400 transition-colors duration-300"
                  aria-label="Twitter"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if settings.social_youtube_link != blank -%}
                <a
                  href="{{ settings.social_youtube_link }}"
                  class="text-neutral-400 hover:text-primary-400 transition-colors duration-300"
                  aria-label="YouTube"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if settings.social_tiktok_link != blank -%}
                <a
                  href="{{ settings.social_tiktok_link }}"
                  class="text-neutral-400 hover:text-primary-400 transition-colors duration-300"
                  aria-label="TikTok"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                  </svg>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>

      <!-- Footer Menu Blocks -->
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="space-y-6" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="text-sm font-semibold text-neutral-100 uppercase tracking-wider">
                  {{ block.settings.heading }}
                </h3>
              {%- endif -%}
              
              {%- if block.settings.menu != blank -%}
                <ul class="space-y-3">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li>
                      <a
                        href="{{ link.url }}"
                        class="text-neutral-300 hover:text-primary-400 transition-colors duration-300 text-sm"
                      >
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'text' -%}
            <div class="space-y-6" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="text-sm font-semibold text-neutral-100 uppercase tracking-wider">
                  {{ block.settings.heading }}
                </h3>
              {%- endif -%}
              
              {%- if block.settings.content != blank -%}
                <div class="text-neutral-300 text-sm leading-relaxed">
                  {{ block.settings.content }}
                </div>
              {%- endif -%}
            </div>

          {%- when 'newsletter' -%}
            <div class="space-y-6" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="text-sm font-semibold text-neutral-100 uppercase tracking-wider">
                  {{ block.settings.heading }}
                </h3>
              {%- endif -%}
              
              {%- if block.settings.description != blank -%}
                <p class="text-neutral-300 text-sm leading-relaxed">
                  {{ block.settings.description }}
                </p>
              {%- endif -%}

              <!-- Newsletter Signup -->
              <form
                action="{{ routes.root_url }}contact"
                method="post"
                id="FooterNewsletterForm"
                accept-charset="UTF-8"
                class="newsletter-form space-y-3"
                novalidate="novalidate"
              >
                <input type="hidden" name="form_type" value="customer">
                <input type="hidden" name="utf8" value="âœ“">
                <input type="hidden" name="contact[tags]" value="newsletter">

                <div class="flex flex-col sm:flex-row gap-2">
                  <div class="flex-1">
                    <label for="FooterNewsletterForm--{{ section.id }}" class="sr-only">
                      {{ 'newsletter.label' | t }}
                    </label>
                    <input
                      id="FooterNewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-neutral-100 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                      value="{{ form.email }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      placeholder="{{ block.settings.placeholder | default: 'Enter your email' }}"
                      required
                    >
                  </div>
                  <button
                    type="submit"
                    class="px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary-500 whitespace-nowrap"
                    name="commit"
                    aria-label="{{ 'newsletter.button_label' | t | default: 'Subscribe' }}"
                  >
                    {{ block.settings.button_text | default: 'Subscribe' }}
                  </button>
                </div>

                {%- if form.errors -%}
                  <div class="text-red-400 text-sm">
                    {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                  </div>
                {%- endif -%}

                {%- if form.posted_successfully? -%}
                  <div class="text-green-400 text-sm">
                    {{ 'newsletter.success_message' | t | default: 'Thank you for subscribing!' }}
                  </div>
                {%- endif -%}
              </form>
            </div>

          {%- when 'contact_info' -%}
            <div class="space-y-6" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="text-sm font-semibold text-neutral-100 uppercase tracking-wider">
                  {{ block.settings.heading }}
                </h3>
              {%- endif -%}

              <div class="space-y-4 text-neutral-300 text-sm">
                {%- if block.settings.address != blank -%}
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-primary-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div>{{ block.settings.address }}</div>
                  </div>
                {%- endif -%}

                {%- if block.settings.phone != blank -%}
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-primary-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <a href="tel:{{ block.settings.phone }}" class="hover:text-primary-400 transition-colors duration-300">
                      {{ block.settings.phone }}
                    </a>
                  </div>
                {%- endif -%}

                {%- if block.settings.email != blank -%}
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-primary-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <a href="mailto:{{ block.settings.email }}" class="hover:text-primary-400 transition-colors duration-300">
                      {{ block.settings.email }}
                    </a>
                  </div>
                {%- endif -%}

                {%- if block.settings.hours != blank -%}
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-primary-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>{{ block.settings.hours }}</div>
                  </div>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <!-- Footer Bottom -->
    <div class="mt-12 pt-8 border-t border-neutral-800">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-4 lg:space-y-0">
        <!-- Copyright -->
        <div class="text-neutral-400 text-sm">
          {%- if section.settings.copyright != blank -%}
            {{ section.settings.copyright }}
          {%- else -%}
            &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
          {%- endif -%}
        </div>

        <!-- Footer Links -->
        <div class="flex flex-wrap items-center gap-6 text-sm">
          {%- if section.settings.show_payment_methods -%}
            <div class="flex items-center space-x-2">
              <span class="text-neutral-400">Payment methods:</span>
              <div class="flex items-center space-x-1">
                {% comment %} Payment icons would go here {% endcomment %}
                <svg class="w-8 h-5 opacity-70" viewBox="0 0 38 24" fill="none">
                  <rect width="38" height="24" rx="4" fill="#1a1f71"/>
                  <path d="M15.1 7.5h-2.8L9.1 16.5h2.2l.6-1.4h2.9l.3 1.4h2.4L15.1 7.5zm-1.4 6.1l1-2.4 1 2.4h-2z" fill="white"/>
                </svg>
                <svg class="w-8 h-5 opacity-70" viewBox="0 0 38 24" fill="none">
                  <rect width="38" height="24" rx="4" fill="#eb001b"/>
                  <circle cx="14" cy="12" r="6" fill="#ff5f00"/>
                  <circle cx="24" cy="12" r="6" fill="#f79e1b"/>
                </svg>
                <svg class="w-8 h-5 opacity-70" viewBox="0 0 38 24" fill="none">
                  <rect width="38" height="24" rx="4" fill="#0070ba"/>
                  <path d="M8 8h6v8H8V8zm8 0h6v8h-6V8z" fill="white"/>
                </svg>
              </div>
            </div>
          {%- endif -%}

          {%- if section.settings.footer_menu != blank -%}
            {%- for link in linklists[section.settings.footer_menu].links -%}
              <a href="{{ link.url }}" class="text-neutral-400 hover:text-primary-400 transition-colors duration-300">
                {{ link.title }}
              </a>
            {%- endfor -%}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</footer>

