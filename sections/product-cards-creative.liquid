{% comment %}
  Product Cards with Multiple Unique Styles
  Magazine layout, card stack, masonry grid, and more creative variations
{% endcomment %}

<style>
  .product-cards-{{ section.id }} {
    --card-primary: {{ section.settings.primary_color | default: '#0ea5e9' }};
    --card-accent: {{ section.settings.accent_color | default: '#f59e0b' }};
  }

  /* Magazine Layout */
  .magazine-layout {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    grid-auto-rows: auto;
  }

  .magazine-card {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.5s cubic-bezier(0.23, 1, 0.320, 1);
  }

  .magazine-card:nth-child(3n+1) {
    grid-row: span 2;
  }

  .magazine-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
  }

  .magazine-card .card-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 4/3;
  }

  .magazine-card:nth-child(3n+1) .card-image {
    aspect-ratio: 4/5;
  }

  /* Stack Cards Layout */
  .stack-layout {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
    perspective: 1000px;
  }

  .stack-card {
    width: 320px;
    height: 480px;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s;
    cursor: pointer;
  }

  .stack-card:hover {
    transform: rotateY(10deg) rotateX(5deg);
  }

  .stack-card-front,
  .stack-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 20px;
    overflow: hidden;
  }

  .stack-card-back {
    transform: rotateY(180deg);
    background: linear-gradient(135deg, var(--card-primary), var(--card-accent));
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
    color: white;
  }

  .stack-card.flipped {
    transform: rotateY(180deg);
  }

  /* Masonry Layout */
  .masonry-layout {
    columns: 300px;
    column-gap: 2rem;
  }

  .masonry-card {
    display: inline-block;
    width: 100%;
    margin-bottom: 2rem;
    break-inside: avoid;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .masonry-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
  }

  /* Floating Cards */
  .floating-layout {
    position: relative;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 3rem;
    padding: 3rem 0;
  }

  .floating-card {
    position: relative;
    background: white;
    border-radius: 25px;
    padding: 1.5rem;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(255, 255, 255, 0.8);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    animation: float 6s ease-in-out infinite;
  }

  .floating-card:nth-child(even) {
    animation-delay: 3s;
  }

  .floating-card:hover {
    transform: translateY(-20px) scale(1.05);
    box-shadow: 
      0 30px 60px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(255, 255, 255, 1);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  /* Glass Morphism Cards */
  .glass-layout {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 3rem;
    border-radius: 30px;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .glass-card:hover {
    background: rgba(255, 255, 255, 0.25);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-5px);
  }

  /* Pricing Badge */
  .price-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--card-accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-weight: bold;
    font-size: 0.9rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    z-index: 10;
  }

  /* Hover Overlay */
  .hover-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--card-primary), var(--card-accent));
    opacity: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .magazine-card:hover .hover-overlay,
  .masonry-card:hover .hover-overlay {
    opacity: 0.9;
  }

  /* Quick Action Buttons */
  .quick-actions {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%) translateY(100%);
    display: flex;
    gap: 0.5rem;
    transition: transform 0.3s ease;
  }

  .floating-card:hover .quick-actions,
  .glass-card:hover .quick-actions {
    transform: translateX(-50%) translateY(0);
  }

  .quick-action-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    transition: all 0.2s ease;
  }

  .quick-action-btn:hover {
    transform: scale(1.1);
    background: var(--card-primary);
    color: white;
  }
</style>

<section class="product-cards-{{ section.id }} py-20">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      {% if section.settings.heading != blank %}
        <h2 class="text-4xl md:text-6xl font-bold text-neutral-900 dark:text-neutral-100 mb-6">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="text-xl text-neutral-600 dark:text-neutral-400 max-w-3xl mx-auto">
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>

    <!-- Products Container -->
    <div class="{% case section.settings.layout_type %}
                  {% when 'magazine' %}magazine-layout
                  {% when 'stack' %}stack-layout
                  {% when 'masonry' %}masonry-layout
                  {% when 'floating' %}floating-layout
                  {% when 'glass' %}glass-layout
                  {% else %}magazine-layout
                {% endcase %}">
      
      {% assign products = collections[section.settings.collection].products | default: collections.all.products %}
      {% assign product_limit = section.settings.products_to_show | default: 8 %}
      
      {% for product in products limit: product_limit %}
        {% case section.settings.layout_type %}
          {% when 'stack' %}
            <div class="stack-card" onclick="flipCard(this)">
              <div class="stack-card-front">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 400 }}" 
                    alt="{{ product.title | escape }}"
                    class="w-full h-full object-cover"
                    loading="lazy"
                  >
                {% endif %}
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                  <h3 class="text-xl font-bold mb-2">{{ product.title }}</h3>
                  <p class="text-lg font-semibold">{{ product.price | money }}</p>
                </div>
                <div class="price-badge">
                  {% if product.compare_at_price > product.price %}
                    SALE
                  {% else %}
                    NEW
                  {% endif %}
                </div>
              </div>
              <div class="stack-card-back">
                <h3 class="text-2xl font-bold mb-4">{{ product.title }}</h3>
                <p class="text-lg mb-6 opacity-90">{{ product.description | strip_html | truncate: 100 }}</p>
                <div class="text-3xl font-bold mb-6">{{ product.price | money }}</div>
                <a href="{{ product.url }}" class="bg-white text-neutral-900 px-6 py-3 rounded-full font-semibold hover:bg-opacity-90 transition-colors">
                  View Product
                </a>
              </div>
            </div>

          {% when 'glass' %}
            <div class="glass-card group">
              <div class="relative mb-4">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 400 }}" 
                    alt="{{ product.title | escape }}"
                    class="w-full h-64 object-cover rounded-lg"
                    loading="lazy"
                  >
                {% endif %}
                <div class="price-badge bg-white/20 backdrop-blur-sm text-white border border-white/30">
                  {{ product.price | money }}
                </div>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">{{ product.title }}</h3>
              <p class="text-white/70 text-sm mb-4">{{ product.description | strip_html | truncate: 80 }}</p>
              <a href="{{ product.url }}" class="inline-flex items-center text-white font-medium hover:text-yellow-300 transition-colors">
                Shop Now
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
              <div class="quick-actions">
                <button class="quick-action-btn" title="Quick View">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </button>
                <button class="quick-action-btn" title="Add to Wishlist">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                </button>
              </div>
            </div>

          {% when 'floating' %}
            <div class="floating-card group">
              <div class="relative mb-4">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 400 }}" 
                    alt="{{ product.title | escape }}"
                    class="w-full h-64 object-cover rounded-xl"
                    loading="lazy"
                  >
                {% endif %}
                {% if product.compare_at_price > product.price %}
                  <div class="absolute top-3 left-3 bg-red-500 text-white px-2 py-1 rounded-full text-xs font-bold">
                    -{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round }}%
                  </div>
                {% endif %}
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">{{ product.title }}</h3>
              <p class="text-neutral-600 text-sm mb-4">{{ product.description | strip_html | truncate: 60 }}</p>
              <div class="flex items-center justify-between">
                <div class="price">
                  {% if product.compare_at_price > product.price %}
                    <span class="text-red-500 font-bold">{{ product.price | money }}</span>
                    <span class="text-neutral-400 line-through text-sm ml-2">{{ product.compare_at_price | money }}</span>
                  {% else %}
                    <span class="text-neutral-900 font-bold">{{ product.price | money }}</span>
                  {% endif %}
                </div>
                <a href="{{ product.url }}" class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors">
                  Buy
                </a>
              </div>
              <div class="quick-actions">
                <button class="quick-action-btn" title="Quick View">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </button>
                <button class="quick-action-btn" title="Add to Cart">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
                  </svg>
                </button>
              </div>
            </div>

          {% else %}
            <!-- Magazine and Masonry layouts -->
            <div class="{% if section.settings.layout_type == 'masonry' %}masonry-card{% else %}magazine-card{% endif %} group">
              <div class="card-image relative">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 600 }}" 
                    alt="{{ product.title | escape }}"
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    loading="lazy"
                  >
                {% endif %}
                <div class="hover-overlay">
                  <a href="{{ product.url }}" class="bg-white text-neutral-900 px-6 py-3 rounded-full font-semibold hover:bg-opacity-90 transition-colors">
                    View Details
                  </a>
                </div>
                <div class="price-badge">{{ product.price | money }}</div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-neutral-900 dark:text-neutral-100 mb-2">{{ product.title }}</h3>
                <p class="text-neutral-600 dark:text-neutral-400 mb-4">{{ product.description | strip_html | truncate: 100 }}</p>
                <div class="flex items-center justify-between">
                  <div class="text-lg font-bold text-primary-600">{{ product.price | money }}</div>
                  <a href="{{ product.url }}" class="text-primary-600 hover:text-primary-700 font-medium">
                    Shop Now â†’
                  </a>
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- View All Button -->
    {% if section.settings.show_view_all and section.settings.collection != blank %}
      <div class="text-center mt-12">
        <a href="{{ collections[section.settings.collection].url }}" 
           class="inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-primary-700 transition-colors">
          <span>View All Products</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</section>

<script>
  function flipCard(card) {
    card.classList.toggle('flipped');
  }

  // Initialize floating animations with random delays
  document.addEventListener('DOMContentLoaded', function() {
    const floatingCards = document.querySelectorAll('.floating-card');
    floatingCards.forEach((card, index) => {
      card.style.animationDelay = `${index * 0.5}s`;
    });
  });
</script>

{% schema %}
{
  "name": "Creative Product Cards",
  "tag": "section",
  "class": "section-creative-product-cards",
  "settings": [
    {
      "type": "select",
      "id": "layout_type",
      "label": "Layout Style",
      "options": [
        {
          "value": "magazine",
          "label": "Magazine Layout"
        },
        {
          "value": "stack",
          "label": "3D Stack Cards"
        },
        {
          "value": "masonry",
          "label": "Masonry Grid"
        },
        {
          "value": "floating",
          "label": "Floating Cards"
        },
        {
          "value": "glass",
          "label": "Glass Morphism"
        }
      ],
      "default": "magazine"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our handpicked selection of premium products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 4,
      "max": 16,
      "step": 2,
      "default": 8
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#0ea5e9"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#f59e0b"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Creative Product Cards"
    }
  ]
}
{% endschema %}