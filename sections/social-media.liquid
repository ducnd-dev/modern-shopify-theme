        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
            {{ section.settings.ugc_title | default: 'Share Your Style' }}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            {{ section.settings.ugc_description | default: 'Tag us in your photos and get featured! We love seeing how you style our products.' }}
          </p>
          {% if section.settings.ugc_hashtag != blank %}
            <div class="mt-4">
              <span class="inline-flex items-center px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium">
                #{{ section.settings.ugc_hashtag }}
              </span>
            </div>
          {% endif %}
        </div>
        
        <!-- UGC Grid -->
        <div 
          x-data="ugcContent()"
          x-init="init()"
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
        >
          <template x-for="content in ugcPosts" :key="content.id">
            <div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="aspect-square relative">
                <img
                  :src="content.image"
                  :alt="content.caption"
                  class="w-full h-full object-cover"
                  loading="lazy"
                >
                
                <!-- Platform Badge -->
                <div class="absolute top-4 right-4">
                  <div class="bg-white bg-opacity-90 rounded-full p-2">
                    <template x-if="content.platform === 'instagram'">
                      <svg class="w-4 h-4 text-pink-500" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    </template>
                    <template x-if="content.platform === 'tiktok'">
                      <svg class="w-4 h-4 text-black" fill="currentColor" viewBox="0 0 24 24">
