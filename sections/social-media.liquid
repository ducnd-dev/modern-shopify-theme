{% comment %}
  Social Media Integration Section
  - Social media feeds
  - Social sharing buttons
  - Follow buttons
  - Instagram feed integration
  - Social proof counters
  - User-generated content
{% endcomment %}

<div class="social-media-section bg-gray-50 dark:bg-gray-900 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      {% if section.settings.heading != blank %}
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-8">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
      
      <!-- Social Stats -->
      {% if section.settings.show_social_stats %}
        <div class="flex justify-center items-center space-x-8 mb-8">
          {% for block in section.blocks %}
            {% if block.type == 'social_stat' %}
              <div class="text-center">
                <div class="text-2xl lg:text-3xl font-bold text-blue-600 dark:text-blue-400">
                  {{ block.settings.stat_number | default: '10K+' }}
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400 uppercase tracking-wide">
                  {{ block.settings.stat_label | default: 'Followers' }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
      
      <!-- Social Follow Buttons -->
      <div class="flex justify-center space-x-4 mb-12">
        {% for block in section.blocks %}
          {% if block.type == 'social_link' %}
            <a
              href="{{ block.settings.social_url }}"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-full text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors shadow-md hover:shadow-lg"
