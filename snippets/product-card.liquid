{% comment %}
  Product Card Snippet
  Reusable product card component used in grids, carousels, and listings
  
  Usage:
  {% render 'product-card', product: product %}
{% endcomment %}

<div class="product-card">
  <a href="{{ product.url }}" class="block">
    <!-- Product Image -->
    <div class="product-card-image aspect-square mb-4">
      {% if product.featured_media %}
        <img
          src="{{ product.featured_media | image_url: width: 400 }}"
          alt="{{ product.featured_media.alt | escape }}"
          width="400"
          height="400"
          class="w-full h-full object-cover transition-opacity duration-300"
          {% if settings.lazy_loading_enabled %}loading="lazy"{% endif %}
        >        {% if settings.product_card_hover_image and product.media[1] %}
          <img
            src="{{ product.media[1] | image_url: width: 400 }}"
            alt="{{ product.media[1].alt | escape }}"
            width="400"
            height="400"
            class="w-full h-full object-cover absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
            {% if settings.lazy_loading_enabled %}loading="lazy"{% endif %}
          >
        {% endif %}
      {% else %}
        <div class="w-full h-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      {% endif %}

      <!-- Badges -->
      <div class="absolute top-3 left-3 flex flex-col gap-2">
        {% if product.compare_at_price > product.price and settings.show_sale_badge %}
          {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
          <span class="badge badge-sale">{{ discount_percentage }}% OFF</span>
        {% endif %}
        
        {% if product.created_at > "now" | date: "%s" | minus: 604800 %}
          <span class="badge badge-new">New</span>
        {% endif %}
        
        {% unless product.available %}
          <span class="badge bg-gray-500 text-white">Sold Out</span>
        {% endunless %}
      </div>

      <!-- Wishlist Button -->
      <button 
        type="button" 
        class="absolute top-3 right-3 w-8 h-8 bg-white dark:bg-gray-800 rounded-full flex items-center justify-center shadow-md hover:shadow-lg transition-shadow opacity-0 group-hover:opacity-100"
        data-wishlist-toggle
        data-product-id="{{ product.id }}"
        aria-label="Add to wishlist"
      >
        <svg class="w-4 h-4 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
      </button>

      <!-- Color Swatches -->
      {% if settings.show_color_swatches and product.options contains 'Color' %}
        {% assign color_option = product.options_with_values | where: 'name', 'Color' | first %}
        {% if color_option.values.size > 1 %}
          <div class="absolute bottom-3 left-3 flex gap-1">
            {% for value in color_option.values limit: 4 %}
              <div 
                class="w-4 h-4 rounded-full border border-white shadow-sm"
                style="background-color: {{ value | handle }}"
                title="{{ value }}"
              ></div>
            {% endfor %}
            {% if color_option.values.size > 4 %}
              <span class="text-xs text-white bg-black bg-opacity-50 px-1 rounded">+{{ color_option.values.size | minus: 4 }}</span>
            {% endif %}
          </div>
        {% endif %}
      {% endif %}
    </div>

    <!-- Product Info -->
    <div class="product-info space-y-2">
      <!-- Vendor -->
      {% if settings.show_vendor and product.vendor != blank %}
        <p class="text-xs text-gray-500 uppercase tracking-wide">{{ product.vendor }}</p>
      {% endif %}

      <!-- Title -->
      <h3 class="font-medium text-gray-900 dark:text-white line-clamp-2 hover:text-primary transition-colors">
        {{ product.title }}
      </h3>

      <!-- Product Type -->
      {% if settings.show_product_type and product.type != blank %}
        <p class="text-sm text-gray-500">{{ product.type }}</p>
      {% endif %}

      <!-- Rating -->
      {% if settings.show_product_rating %}
        <div class="rating" data-rating="4.5">
          <div class="flex items-center gap-1">
            {% for i in (1..5) %}
              <svg class="rating-star w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            {% endfor %}
            <span class="text-xs text-gray-500 ml-1">(24)</span>
          </div>
        </div>
      {% endif %}

      <!-- Price -->
      <div class="price-wrapper">
        {% if product.compare_at_price > product.price and settings.show_compare_at_price %}
          <div class="flex items-center gap-2">
            <span class="price price--on-sale font-semibold">
              {{ product.price | money }}
            </span>
            <span class="price--compare-at text-sm">
              {{ product.compare_at_price | money }}
            </span>
          </div>
        {% else %}
          <span class="price font-semibold">
            {{ product.price | money }}
          </span>
        {% endif %}
      </div>
    </div>
  </a>

  <!-- Quick Add Button -->
  {% if settings.show_quick_add and product.available %}
    <div class="quick-add">
      {% if product.has_only_default_variant %}
        <button 
          type="button"
          class="btn btn-primary w-full"
          data-quick-add
          data-product-id="{{ product.selected_or_first_available_variant.id }}"
        >
          Quick Add
        </button>
      {% else %}
        <a href="{{ product.url }}" class="btn btn-secondary w-full">
          Select Options
        </a>
      {% endif %}
    </div>
  {% endif %}
</div>

<style>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>