<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}" dir="{{ settings.text_direction }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.primary_color | default: '#0ea5e9' }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; {{ 'general.meta.tags' | t: tags: current_tags | join: ', ' }}{% endif -%}
      {%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    {{ content_for_header }}
    
    <!-- Service Worker Registration -->
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(registration => {
              console.log('SW registered: ', registration);
            })
            .catch(registrationError => {
              console.log('SW registration failed: ', registrationError);
            });
        });
      }
    </script>
    
    <!-- Web App Manifest -->
    <link rel="manifest" href="/manifest.json">
    
    <!-- Performance measurement end -->
    <script>
      window.performance && performance.mark && performance.mark('shopify.content_for_header.end');
    </script>

    <!-- CSS Variables for Theme Customization -->
    <style>
      :root {
        --color-primary-50: {{ settings.primary_color | color_lighten: 45 | remove: '#' }};
        --color-primary-100: {{ settings.primary_color | color_lighten: 40 | remove: '#' }};
        --color-primary-200: {{ settings.primary_color | color_lighten: 30 | remove: '#' }};
        --color-primary-300: {{ settings.primary_color | color_lighten: 20 | remove: '#' }};
        --color-primary-400: {{ settings.primary_color | color_lighten: 10 | remove: '#' }};
        --color-primary-500: {{ settings.primary_color | remove: '#' }};
        --color-primary-600: {{ settings.primary_color | color_darken: 10 | remove: '#' }};
        --color-primary-700: {{ settings.primary_color | color_darken: 20 | remove: '#' }};
        --color-primary-800: {{ settings.primary_color | color_darken: 30 | remove: '#' }};
        --color-primary-900: {{ settings.primary_color | color_darken: 40 | remove: '#' }};
        
        --color-accent-500: {{ settings.accent_color | remove: '#' }};
        --color-accent-600: {{ settings.accent_color | color_darken: 10 | remove: '#' }};
        
        --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
        --font-body-style: {{ settings.type_body_font.style }};
        --font-body-weight: {{ settings.type_body_font.weight }};
        
        --font-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
        --font-heading-style: {{ settings.type_header_font.style }};
        --font-heading-weight: {{ settings.type_header_font.weight }};
        
        --page-width: {{ settings.page_width | divided_by: 10 }}rem;
        --section-spacing: {{ settings.section_spacing }}px;
      }

      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      html {
        box-sizing: border-box;
        font-size: calc({{ settings.body_scale }}% * 0.625);
        height: 100%;
      }

      body {
        display: grid;
        grid-template-rows: auto auto 1fr auto;
        grid-template-columns: 100%;
        min-height: 100%;
        margin: 0;
        font-size: 1.5rem;
        letter-spacing: 0.06rem;
        line-height: calc(1 + 0.8 / var(--font-body-scale));
        font-family: var(--font-body-family);
        font-style: var(--font-body-style);
        font-weight: var(--font-body-weight);
      }

      @media screen and (min-width: 750px) {
        body {
          font-size: 1.6rem;
        }
      }
    </style>

    {{ 'theme-compiled.css' | asset_url | stylesheet_tag }}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ 'skip-to-content.css' | asset_url | stylesheet_tag }}

    {%- unless settings.type_body_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.type_body_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}
    {%- unless settings.type_header_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.type_header_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}

    {%- if settings.predictive_search_enabled -%}
      <link rel="stylesheet" href="{{ 'predictive-search.css' | asset_url }}" media="print" onload="this.media='all'">
    {%- endif -%}
    
    <!-- Performance Critical CSS -->
    <link rel="stylesheet" href="{{ 'performance-critical.css' | asset_url }}" media="all">
    
    <!-- Component Stylesheets -->
    <link rel="stylesheet" href="{{ 'quick-view.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'cart-drawer.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'social-proof.css' | asset_url }}" media="print" onload="this.media='all'">
    
    <!-- Preload Critical JavaScript -->
    <link rel="preload" href="{{ 'performance-optimizer.js' | asset_url }}" as="script">
    <link rel="preload" href="{{ 'theme.js' | asset_url }}" as="script">

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }

      // Dark mode detection and initialization
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
      
      // Performance monitoring
      window.performance && performance.mark && performance.mark('shopify.content_for_header.start');
    </script>
  </head>

  <body class="font-body bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100 transition-colors duration-300">
    <!-- Skip to content for accessibility -->
    <a class="skip-to-content" href="#MainContent">
      <span class="skip-text">{{ 'accessibility.skip_to_text' | t }}</span>
      <svg class="skip-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    </a>

    <!-- Header Group -->
    {% sections 'group-header' %}
    
    <!-- Performance monitoring for layout start -->
    <script>
      window.performance && performance.mark && performance.mark('shopify.content_for_layout.start');
    </script>

    <!-- Main Content -->
    <main id="MainContent" class="content-for-layout focus:outline-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    <!-- Quick View Modal -->
    {% render 'quick-view-modal' %}

    <!-- Footer Group -->
    {% sections 'group-footer' %}

    <!-- Cart Drawer -->
    {%- if settings.cart_type == 'drawer' -%}
      {%- render 'cart-drawer-enhanced' -%}
    {%- else -%}
      {%- render 'cart-drawer' -%}
    {%- endif -%}
    
    <!-- Predictive Search -->
    {%- if settings.predictive_search_enabled -%}
      {%- render 'predictive-search' -%}
    {%- endif -%}
    
    <!-- Recent Purchase Notifications -->
    {%- if settings.show_recent_purchases -%}
      {%- render 'recent-purchases' -%}
    {%- endif -%}
    
    <!-- Modal Backdrop -->
    <div id="modal-backdrop" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden opacity-0 transition-opacity duration-300"></div>
    
    <!-- Loading Indicator -->
    <div id="loading-indicator" class="fixed top-0 left-0 w-full h-1 bg-blue-600 transform scale-x-0 transition-transform duration-300 z-50"></div>
    
    <!-- Back to Top Button -->
    <button
      id="back-to-top"
      class="fixed bottom-6 right-6 w-12 h-12 bg-blue-600 text-white rounded-full shadow-lg hover:bg-blue-700 transition-all duration-300 transform translate-y-16 opacity-0 z-40"
      aria-label="Back to top"
      type="button"
    >
      <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
      </svg>
    </button>

    <!-- Newsletter Modal -->
    {%- if settings.newsletter_popup_enabled -%}
      {%- render 'newsletter-popup' -%}
    {%- endif -%}

    <!-- Scripts -->
    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        cart_url: '{{ routes.cart_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}'
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
      }

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
        unavailable_with_option: `{{ 'products.product.value_unavailable' | t: option_value: '[value]' }}`,
      }

      window.accessibilityStrings = {
        imageAvailable: `{{ 'products.product.media.image_available' | t: index: '[index]' }}`,
        shareSuccess: `{{ 'general.share.success_message' | t }}`,
        pauseSlideshow: `{{ 'sections.slideshow.pause_slideshow' | t }}`,
        playSlideshow: `{{ 'sections.slideshow.play_slideshow' | t }}`,
      }
      
      // Theme Settings for JavaScript
      window.themeSettings = {
        cartType: '{{ settings.cart_type | default: "drawer" }}',
        predictiveSearchEnabled: {{ settings.predictive_search_enabled | default: false }},
        showRecentPurchases: {{ settings.show_recent_purchases | default: false }},
        animationSpeed: '{{ settings.animation_speed | default: "normal" }}',
        enableQuickView: {{ settings.enable_quick_view | default: true }},
        enableLazyLoading: {{ settings.enable_lazy_loading | default: true }},
        currency: '{{ shop.currency }}',
        moneyFormat: '{{ shop.money_format }}',
        moneyWithCurrencyFormat: '{{ shop.money_with_currency_format }}'
      };
      
      // Performance tracking
      window.performance && performance.mark && performance.mark('shopify.content_for_layout.end');
    </script>
    
    <!-- Performance Optimizer (Critical) -->
    <script src="{{ 'performance-optimizer.js' | asset_url }}" defer></script>
    
    <!-- Theme JavaScript (Main) -->
    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    
    <!-- Component JavaScript (Lazy Loaded) -->
    {%- if settings.enable_quick_view -%}
      <script src="{{ 'quick-view.js' | asset_url }}" defer></script>
    {%- endif -%}
    
    {%- if settings.cart_type == 'drawer' -%}
      <script src="{{ 'cart-drawer-enhanced.js' | asset_url }}" defer></script>
    {%- endif -%}
    
    {%- if settings.predictive_search_enabled -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer></script>
    {%- endif -%}

      window.accessibilityStrings = {
        imageAvailable: `{{ 'products.product.media.image_available' | t: index: '[index]' }}`,
        shareSuccess: `{{ 'general.share.success_message' | t }}`,
        pauseSlideshow: `{{ 'sections.slideshow.pause_slideshow' | t }}`,
        playSlideshow: `{{ 'sections.slideshow.play_slideshow' | t }}`,
      }
    </script>

    {%- if settings.predictive_search_enabled -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    <!-- Global Cart Management -->
    <script src="{{ 'global-cart.js' | asset_url }}" defer="defer"></script>
    
    <!-- Enhanced Cart Drawer -->
    <script src="{{ 'cart-drawer-enhanced.js' | asset_url }}" defer="defer"></script>
    
    <!-- Page-specific scripts -->
    {% if template.name == 'collection' %}
      <script src="{{ 'collection.js' | asset_url }}" defer="defer"></script>
    {% endif %}
    
    <!-- Quick View Modal (available on all pages) -->
    <script src="{{ 'quick-view.js' | asset_url }}" defer="defer"></script>
    
    {{ 'theme.js' | asset_url | script_tag }}

    <!-- Theme Editor Scripts -->
    {%- if request.design_mode -%}
      <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    <!-- Cart Notification -->
    <div id="cart-notification" class="fixed top-4 right-4 z-50 max-w-sm transform translate-x-full transition-transform duration-300 ease-in-out">
      <div class="bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-lg shadow-lg p-4">
        <div class="flex items-center space-x-3">
          <div class="flex-shrink-0 w-16 h-16 bg-neutral-100 dark:bg-neutral-700 rounded-md overflow-hidden">
            <img id="cart-notification-image" src="" alt="" class="w-full h-full object-cover">
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-sm text-neutral-900 dark:text-neutral-100" id="cart-notification-title"></p>
            <p class="text-sm text-neutral-500 dark:text-neutral-400" id="cart-notification-message"></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="fixed inset-0 bg-white/80 dark:bg-neutral-900/80 backdrop-blur-sm z-100 hidden">
      <div class="flex items-center justify-center h-full">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
      </div>
    </div>
  </body>
</html>