.collection-icon svg {
  width: 1rem;
  height: 1rem;
  color: #6b7280;
}

.collection-info {
  flex: 1;
}

.collection-title {
  font-size: 0.875rem;
  font-weight: 500;
  color: #111827;
  margin: 0 0 0.125rem 0;
}

.collection-count {
  font-size: 0.75rem;
  color: #6b7280;
  margin: 0;
}

/* Recent searches */
.search-recent {
  padding: 0.5rem;
}

/* Loading state */
.search-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  color: #6b7280;
}

.loading-spinner {
  width: 1.5rem;
  height: 1.5rem;
  border: 2px solid #f3f4f6;
  border-top: 2px solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 0.75rem;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* No results */
.search-no-results {
  text-align: center;
  padding: 2rem;
  color: #6b7280;
}

.no-results-icon {
  width: 3rem;
  height: 3rem;
  margin: 0 auto 0.75rem;
  color: #d1d5db;
}

.search-no-results h3 {
  font-size: 0.875rem;
  font-weight: 500;
  color: #111827;
  margin: 0 0 0.25rem 0;
}

.search-no-results p {
  font-size: 0.75rem;
  margin: 0;
}

/* View all results */
.search-view-all {
  border-top: 1px solid #f3f4f6;
  padding: 0.5rem;
}

.view-all-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0.5rem;
  font-size: 0.875rem;
  font-weight: 500;
  color: #3b82f6;
  text-decoration: none;
  border-radius: 0.375rem;
  transition: background-color 0.2s ease;
}

.view-all-link:hover {
  background-color: #eff6ff;
}

/* Highlight matches */
mark {
  background-color: #fef3c7;
  color: #92400e;
  padding: 0;
  font-weight: 600;
}

/* Error state */
.search-error {
  text-align: center;
  padding: 1.5rem;
  color: #ef4444;
  font-size: 0.875rem;
}

/* Mobile responsive */
@media (max-width: 640px) {
  [data-search-results] {
    max-height: 20rem;
  }
  
  .search-product-item {
    padding: 0.5rem;
  }
  
  .product-image {
    width: 2.5rem;
    height: 2.5rem;
    margin-right: 0.5rem;
  }
  
  .product-title {
    font-size: 0.8125rem;
  }
  
  .product-vendor,
  .product-price {
    font-size: 0.6875rem;
  }
}

/* Dark mode styles */
@media (prefers-color-scheme: dark) {
  .search-section-title,
  .clear-recent-btn {
    color: #9ca3af;
  }
  
  .clear-recent-btn:hover {
    color: #d1d5db;
  }
  
  .search-suggestion-item,
  .search-recent-item {
    color: #d1d5db;
  }
  
  .search-suggestion-item:hover,
  .search-recent-item:hover,
  .search-suggestion-item.selected,
  .search-recent-item.selected {
    background-color: #374151;
  }
  
  .search-product-item:hover,
  .search-product-item.selected {
    background-color: #374151;
  }
  
  .product-title {
    color: #f9fafb;
  }
  
  .product-vendor {
    color: #9ca3af;
  }
  
  .price {
    color: #f9fafb;
  }
  
  .compare-price {
    color: #9ca3af;
  }
  
  .search-collection-item:hover {
    background-color: #374151;
  }
  
  .collection-icon {
    background-color: #4b5563;
  }
  
  .collection-title {
    color: #f9fafb;
  }
  
  .collection-count {
    color: #9ca3af;
  }
  
  .search-loading {
    color: #9ca3af;
  }
  
  .loading-spinner {
    border-color: #4b5563;
    border-top-color: #3b82f6;
  }
  
  .search-no-results {
    color: #9ca3af;
  }
  
  .no-results-icon {
    color: #6b7280;
  }
  
  .search-no-results h3 {
    color: #f9fafb;
  }
  
  .view-all-link:hover {
    background-color: #1e3a8a;
  }
  
  .search-error {
    color: #f87171;
  }
  
  .availability-badge.available {
    background-color: #065f46;
    color: #d1fae5;
  }
  
  .availability-badge.sold-out {
    background-color: #7f1d1d;
    color: #fecaca;
  }
  
  mark {
    background-color: #f59e0b;
    color: #fff;
  }
}