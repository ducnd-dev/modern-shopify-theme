[
  {
    "name": "theme_info",
    "theme_name": "Modern Shopify Theme Pro",
    "theme_version": "2.0.0",
    "theme_author": "Modern Theme Studio",
    "theme_documentation_url": "https://github.com/ducnd-dev/modern-shopify-theme",
    "theme_support_url": "https://github.com/ducnd-dev/modern-shopify-theme/issues"
  },
  {
    "name": "Performance & Features",
    "settings": [
      {
        "type": "header",
        "content": "Performance Optimization"
      },
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "label": "Enable lazy loading",
        "default": true,
        "info": "Improves page load speed by loading images when needed"
      },
      {
        "type": "checkbox",
        "id": "enable_service_worker",
        "label": "Enable service worker (PWA)",
        "default": true,
        "info": "Enables offline functionality and faster loading"
      },
      {
        "type": "checkbox",
        "id": "enable_critical_css",
        "label": "Inline critical CSS",
        "default": true,
        "info": "Improves initial page load speed"
      },
      {
        "type": "checkbox",
        "id": "enable_code_splitting",
        "label": "Enable JavaScript code splitting",
        "default": true,
        "info": "Loads JavaScript modules only when needed"
      },
      {
        "type": "select",
        "id": "animation_speed",
        "label": "Animation speed",
        "options": [
          {
            "value": "fast",
            "label": "Fast (150ms)"
          },
          {
            "value": "normal",
            "label": "Normal (300ms)"
          },
          {
            "value": "slow",
            "label": "Slow (500ms)"
          }
        ],
        "default": "normal"
      },
      {
        "type": "header",
        "content": "Advanced Features"
      },
      {
        "type": "checkbox",
        "id": "enable_quick_view",
        "label": "Enable product quick view",
        "default": true,
        "info": "Allow customers to preview products without leaving the page"
      },
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer (Recommended)"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer",
        "info": "Drawer provides better user experience"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable predictive search",
        "default": true,
        "info": "Show search suggestions as customers type"
      },
      {
        "type": "checkbox",
        "id": "show_recent_purchases",
        "label": "Show recent purchase notifications",
        "default": true,
        "info": "Display social proof notifications to increase conversions"
      }
    ]
  },
  {
