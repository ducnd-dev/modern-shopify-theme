      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://www.instagram.com/shopify"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/shopify"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://www.tiktok.com/@shopify"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://www.youtube.com/user/shopify"
      },
      {
        "type": "text",
        "id": "social_linkedin_link",
        "label": "LinkedIn",
        "info": "https://www.linkedin.com/company/shopify"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://www.pinterest.com/shopify"
      }
    ]
  },
  {
    "name": "Newsletter",
    "settings": [
      {
        "type": "header",
        "content": "Newsletter popup"
      },
      {
        "type": "checkbox",
        "id": "newsletter_popup_enabled",
        "label": "Enable newsletter popup",
        "default": false
      },
      {
        "type": "range",
        "id": "newsletter_popup_delay",
        "min": 0,
        "max": 30,
        "step": 1,
        "unit": "s",
        "label": "Popup delay",
        "default": 5,
        "info": "Time before showing popup"
      },
      {
        "type": "text",
        "id": "newsletter_popup_title",
        "label": "Popup title",
        "default": "Stay in the loop"
      },
      {
        "type": "textarea",
        "id": "newsletter_popup_text",
        "label": "Popup text",
        "default": "Subscribe to our newsletter for exclusive deals and updates."
      }
    ]
  },
  {
    "name": "Payment methods",
    "settings": [
      {
        "type": "header",
        "content": "Payment methods"
      },
      {
        "type": "checkbox",
        "id": "show_payment_methods",
        "label": "Show payment method icons",
        "default": true
      },
      {
        "type": "select",
        "id": "payment_methods_type",
        "label": "Payment methods to show",
        "options": [
          {
            "value": "generic",
            "label": "Generic icons"
          },
          {
            "value": "custom",
            "label": "Custom images"
          }
        ],
        "default": "generic"
      }
    ]
  },
  {
    "name": "Cookie consent",
    "settings": [
      {
        "type": "header",
        "content": "Cookie consent"
      },
      {
        "type": "checkbox",
        "id": "cookie_consent_enabled",
        "label": "Enable cookie consent banner",
        "default": false
      },
      {
        "type": "text",
        "id": "cookie_consent_message",
        "label": "Cookie consent message",
        "default": "We use cookies to enhance your browsing experience and analyze our traffic."
      },
      {
        "type": "text",
        "id": "cookie_consent_accept_text",
        "label": "Accept button text",
        "default": "Accept all"
      },
      {
        "type": "text",
        "id": "cookie_consent_decline_text",
        "label": "Decline button text",
        "default": "Decline"
      },
      {
        "type": "url",
        "id": "cookie_consent_policy_link",
        "label": "Privacy policy link"
      }
    ]
  },
  {
    "name": "Accessibility",
    "settings": [
      {
        "type": "header",
        "content": "Accessibility"
      },
      {
        "type": "checkbox",
        "id": "skip_to_content_enabled",
        "label": "Enable skip to content link",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "focus_outlines_enabled",
        "label": "Show focus outlines",
        "default": true,
        "info": "Helps keyboard users navigate the site"
      },
      {
        "type": "checkbox",
        "id": "reduce_motion_enabled",
        "label": "Respect reduced motion preferences",
        "default": true,
        "info": "Reduces animations for users who prefer less motion"
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "header",
        "content": "Performance settings"
      },
      {
        "type": "checkbox",
        "id": "lazy_loading_enabled",
        "label": "Enable lazy loading for images",
        "default": true,
        "info": "Improves page load speed"
      },
      {
        "type": "checkbox",
        "id": "preload_fonts",
        "label": "Preload custom fonts",
        "default": true,
        "info": "Prevents font loading delays"
      },
      {
        "type": "checkbox",
        "id": "critical_css_inline",
        "label": "Inline critical CSS",
        "default": false,
        "info": "May improve perceived loading speed"
      }
    ]
  },
