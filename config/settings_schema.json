    "settings": [
      {
        "type": "header",
        "content": "Theme presets"
      },
      {
        "type": "select",
        "id": "demo_preset",
        "label": "Choose demo configuration",
        "options": [
          {
            "value": "fashion",
            "label": "Fashion Store"
          },
          {
            "value": "electronics",
            "label": "Electronics Store"
          },
          {
            "value": "beauty",
            "label": "Beauty Store"
          },
          {
            "value": "minimal",
            "label": "Dark Minimal Store"
          },
          {
            "value": "custom",
            "label": "Custom"
          }
        ],
        "default": "custom",
        "info": "Pre-configured color schemes and layouts for different store types"
      }
    ]
  }
]